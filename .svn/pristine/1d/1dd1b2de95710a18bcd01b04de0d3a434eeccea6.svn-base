<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="#FFFFFF"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <com.bochat.app.app.view.BoChatTopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_hasBackBtn="true"
        android:background="#F2F2F2"
        app:top_titleText="零钱提现"/>
    
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/shape_gray_5dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="到账银行卡"
            android:textColor="#ff181818"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp_16" />

        <RelativeLayout
            android:id="@+id/mine_property_cash_out_select_bank_card"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/mine_property_cash_out_select_bank_card_id"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_toLeftOf="@+id/iv_arrow_right"
                android:text=""
                android:textColor="#181818"
                android:textSize="@dimen/dp_16" />

            <ImageView
                android:id="@+id/iv_arrow_right"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/ic_arrow_right_gray24" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_210"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_gray_5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_18"
            android:text="提现金额"
            android:textColor="#ff999999"
            android:textSize="@dimen/dp_16" />


        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_42"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_85"
            android:text="￥"
            android:textColor="#181818"
            android:textSize="@dimen/dp_30" />


        <EditText
            android:id="@+id/mine_property_cash_out_amount"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_42"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_85"
            android:layout_toRightOf="@+id/tv_unit"
            android:background="@null"
            android:hint="0.00"
            android:inputType="numberDecimal"
            android:maxLength="8"
            android:textColor="#181818"
            android:textColorHint="#000000"
            android:textSize="@dimen/dp_30"/>


        <TextView
            android:id="@+id/mine_property_cash_out_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_90"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text="最大"
            android:padding="@dimen/dp_5"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:textColor="#FE695E"
            android:textSize="@dimen/dp_16" />

        <View
            android:layout_toLeftOf="@+id/tv_max"
            android:layout_marginTop="@dimen/dp_91"
            android:background="#DFDFDF"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_30"/>

        <View
            android:id="@+id/tv_div"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/tv_unit"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:background="#DFDFDF" />

        <LinearLayout
            android:id="@+id/tv_money"
            android:layout_below="@id/tv_div"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额："
                android:textColor="#181818"
                android:layout_marginLeft="@dimen/dp_17"
                android:textSize="@dimen/dp_14" />
            <TextView
                android:id="@+id/mine_property_cash_out_money"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:text="￥0.00"
                android:textColor="#fffe695e"
                android:textSize="@dimen/dp_14"
                />
            <TextView
                android:id="@+id/tv_account"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到账："
                android:textColor="#181818"
                android:textSize="@dimen/dp_14"
                />
            <TextView
                android:id="@+id/mine_property_cash_out_real_amount"
                android:layout_toRightOf="@id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:text="￥0.00"
                android:textColor="#000000"
                android:textSize="@dimen/dp_14"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="手续费："
                android:textColor="#181818"
                android:layout_marginLeft="@dimen/dp_17"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/mine_property_cash_out_charge"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:text="￥0.00"
                android:textColor="#000000"
                android:textSize="@dimen/dp_14"
                />
        </LinearLayout>
        
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/ic_red_circle_warning"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="单笔最大不超过￥20000"/>
        </LinearLayout>
        
    </RelativeLayout>

    <Button
        android:id="@+id/mine_property_cash_out_enter_btn"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/shape_login_btn"
        android:text="提现"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dp_17" />

    <TextView
        android:layout_marginTop="@dimen/dp_36"
        android:layout_width="@dimen/dp_315"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/dp_2"
        android:text="温馨提示"
        android:textColor="#999999"
        android:textSize="@dimen/dp_14"
        />

    <TextView
        android:layout_width="@dimen/dp_315"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:paddingTop="@dimen/dp_2"
        android:text="① 限额说明：单笔提现金额不得低于100元，最高不得大于20000元；"
        android:textColor="#999999"
        android:textSize="@dimen/dp_14"/>
    <TextView
        android:paddingTop="@dimen/dp_2"
        android:layout_width="@dimen/dp_315"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="② 手续费：每笔提现平台会收取0.5%的手续费；"
        android:textColor="#999999"
        android:textSize="@dimen/dp_14"/>
    <TextView
        android:paddingTop="@dimen/dp_2"
        android:layout_width="@dimen/dp_315"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="③ 到账时间：提现将会在1~3个工作日内到账，如有任何疑问，请联系客服；"
        android:textColor="#999999"
        android:textSize="@dimen/dp_14"/>
    
</LinearLayout>
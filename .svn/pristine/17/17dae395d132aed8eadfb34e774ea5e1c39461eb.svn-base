<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/group_join_type_title"
           android:layout_width="wrap_content"
           android:layout_height="@dimen/dp_54"
           android:text=""
           android:textSize="@dimen/dp_16"
           android:gravity="center_vertical"
           android:textColor="#222222"
           android:paddingLeft="@dimen/dp_15"/>

       <ImageView
           android:id="@+id/group_join_type_icon"
           android:layout_width="@dimen/dp_18"
           android:layout_height="@dimen/dp_13"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
           android:layout_marginRight="@dimen/dp_15"
           android:visibility="gone"
           android:src="@mipmap/ic_ok_black_"/>
   </RelativeLayout>


    <LinearLayout
        android:id="@+id/layout_item_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        >

        <RelativeLayout
            android:id="@+id/join_type_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">
            <ImageView
                android:id="@+id/check_1"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/administrators_choice"
                android:layout_marginLeft="@dimen/dp_15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/check_1"
                android:text="需要群主或管理员同意"
                android:layout_centerVertical="true"
                android:textColor="#222222"
                android:textSize="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_14"
                />
            
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/join_type_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_35"
            >
            <ImageView
                android:id="@+id/check_2"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/administrators_choice"
                android:layout_marginLeft="@dimen/dp_15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/check_2"
                android:text="需要回答问题并由管理员同意"
                android:textColor="#222222"
                android:textSize="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_14"
                />
            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_14"
                android:text="问题 "
                android:textColor="#999999"
                android:layout_below="@id/check_2"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_marginLeft="@dimen/dp_47"/>

            <EditText
                android:id="@+id/edit_question_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/check_2"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="27dp"
                android:layout_toRightOf="@id/question"
                android:background="@null"
                android:focusable="true"
                android:hint="你为什么要加入群"
                android:textColorHint="#CCCCCC"
                android:textSize="@dimen/dp_14" />
            <View
                android:layout_below="@id/edit_question_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#F7F7F7"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_46"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/join_type_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_35"
            >
            <ImageView
                android:id="@+id/check_3"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:src="@mipmap/administrators_choice"
                android:layout_marginLeft="@dimen/dp_15"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/check_3"
                android:text="需要回答问题并由管理员同意"
                android:textColor="#222222"
                android:textSize="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_14"
                />
            <TextView
                android:id="@+id/question2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_14"
                android:text="问题 "
                android:textColor="#999999"
                android:layout_below="@id/check_3"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_marginLeft="@dimen/dp_47"/>

            <EditText
                android:id="@+id/edit_question_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_14"
                android:background="@null"
                android:hint="你为什么要加入群"
                android:layout_toRightOf="@id/question2"
                android:textColorHint="#CCCCCC"
                android:layout_below="@id/check_3"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_marginLeft="@dimen/dp_17"
                android:focusable="true"/>
            <View
                android:id="@+id/div_question"
                android:layout_below="@id/question2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#F7F7F7"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_46"/>

            <TextView
                android:id="@+id/answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_14"
                android:text="答案 "
                android:textColor="#999999"
                android:layout_below="@id/div_question"
                android:layout_marginTop="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_47"/>

            <EditText
                android:id="@+id/answer_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_14"
                android:background="@null"

                android:layout_toRightOf="@id/answer"

                android:layout_below="@id/div_question"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_marginLeft="@dimen/dp_17"
                android:focusable="true"
                />
            <View
                android:layout_below="@id/answer_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#F7F7F7"
                android:layout_marginLeft="@dimen/dp_46"
                android:layout_marginBottom="@dimen/dp_28" />



        </RelativeLayout>



    </LinearLayout>


</LinearLayout>
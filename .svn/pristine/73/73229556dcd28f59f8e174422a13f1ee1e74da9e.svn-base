<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">



    <ScrollView
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_267">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@mipmap/red_envelopes_bg"
                    android:layout_height="@dimen/dp_255">
                    <RelativeLayout
                        android:id="@+id/info_relative"
                        android:layout_marginTop="@dimen/dp_77"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/head_img"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30" />
                        <TextView
                            android:layout_marginLeft="@dimen/dp_6"
                            android:layout_centerVertical="true"
                            android:id="@+id/title_text"
                            android:layout_toRightOf="@+id/head_img"
                            android:text="大白兔奶糖"
                            android:textSize="@dimen/dp_16"
                            android:textColor="#FAE7B3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <TextView
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/notice_text"
                        android:layout_below="@+id/info_relative"
                        android:textColor="#FAE7B3"
                        android:textSize="@dimen/dp_12"
                        android:text="我是红包附言(30字)以内"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="@dimen/dp_24"
                        android:id="@+id/value_person"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/notice_text"
                        android:textColor="#F2E8B5"
                        android:textSize="@dimen/dp_24"
                        android:text="188.88"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/gradient_origin_bt"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/dp_185"
                    android:layout_height="@dimen/dp_44" >
                    <ImageView
                        android:layout_marginRight="@dimen/dp_4"
                        android:src="@mipmap/redpacket_dialog_add"
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12" />
                    <TextView
                        android:textSize="@dimen/dp_14"
                        android:textColor="@color/white"
                        android:text="加入群聊抢红包"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_64">
                    <RelativeLayout
                        android:id="@+id/back_relative"
                        android:padding="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_centerVertical="true"
                            android:src="@mipmap/red_envelopes_back"
                            android:layout_width="@dimen/dp_9"
                            android:layout_height="@dimen/dp_17" />
                    </RelativeLayout>
                    <TextView
                        android:layout_centerInParent="true"
                        android:textColor="#F2E8B5"
                        android:textSize="@dimen/dp_18"
                        android:text="红包"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/redpacket_history"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:textColor="#F2E8B5"
                        android:text="红包记录"
                        android:textSize="@dimen/dp_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/receive_notice_text"
                android:layout_marginBottom="@dimen/dp_11"
                android:layout_marginTop="@dimen/dp_21"
                android:layout_marginLeft="@dimen/dp_15"
                android:text=""
                android:textSize="@dimen/dp_12"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="@dimen/dp_15"
                android:background="#F7F7F7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
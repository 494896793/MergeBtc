<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingBottom="@dimen/dp_19"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/group_head"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:src="@mipmap/boy_icon"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40" />

   <LinearLayout
       android:layout_marginLeft="@dimen/dp_11"
       android:layout_width="wrap_content"
       android:orientation="vertical"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/group_name"
           android:text="闪电猪猪侠"
           android:textSize="@dimen/dp_11"
           android:textColor="@color/white"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <RelativeLayout
           android:id="@+id/red_bg"
           android:layout_marginTop="@dimen/dp_5"
           android:background="@mipmap/money_frame"
           android:layout_width="@dimen/dp_211"
           android:layout_height="@dimen/dp_82">
           <ImageView
               android:id="@+id/money_icon"
               android:layout_marginLeft="@dimen/dp_16"
               android:layout_marginTop="@dimen/dp_15"
               android:src="@mipmap/money_icon"
               android:layout_width="@dimen/dp_24"
               android:layout_height="@dimen/dp_33" />
           <TextView
               android:lines="1"
               android:maxEms="10"
               android:ellipsize="end"
               android:layout_toRightOf="@id/money_icon"
               android:id="@+id/red_title"
               android:layout_marginLeft="@dimen/dp_10"
               android:layout_marginTop="@dimen/dp_10"
               android:textColor="@color/white"
               android:textSize="@dimen/dp_14"
               android:text="我是一个未被点击的红包"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/red_desc"
               android:layout_alignLeft="@id/red_title"
               android:layout_marginTop="@dimen/dp_8"
               android:layout_below="@id/red_title"
               android:textSize="@dimen/dp_12"
               android:text="BoChat红包"
               android:textColor="@color/white"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/red_type"
               android:layout_marginBottom="@dimen/dp_2"
               android:layout_alignLeft="@id/red_title"
               android:textSize="@dimen/dp_11"
               android:layout_alignParentBottom="true"
               android:textColor="@color/color_999999"
               android:text="糖果红包"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RelativeLayout>
   </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <com.bochat.app.app.view.BoChatTopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_hasBackBtn="true"
        app:top_background="#F2F2F2"
        app:top_titleText="账单详情"/>
    
    <TextView
        android:id="@+id/mine_bill_detail_type"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_46"
        android:textColor="#181818"/>
    <TextView
        android:id="@+id/mine_bill_detail_count"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#FE695E"/>
    <RelativeLayout
        android:background="@drawable/shape_gray_5dp"
        android:layout_marginTop="@dimen/dp_57"
        android:layout_width="@dimen/dp_345"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/mine_bill_detail_list"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    
</LinearLayout>
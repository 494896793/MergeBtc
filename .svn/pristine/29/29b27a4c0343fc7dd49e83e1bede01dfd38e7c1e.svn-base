<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/cv_group_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_backBtnBackground="@mipmap/ic_arrow_left_white"
        app:top_background="#00000000"
        app:top_hasBackBtn="true"
        app:top_titleColor="@color/white"
        app:top_titleText="" />

    <com.bochat.app.app.view.ScaleImageView
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cv_group_top_bar"
        android:src="@mipmap/ic_default_head"/>
</RelativeLayout>
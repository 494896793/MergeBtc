<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F2F2F2">

    <com.bochat.app.app.view.BoChatTopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_hasBackBtn="true"
        app:top_background="#FFFFFF"
        app:top_titleText="设置"/>
    <com.bochat.app.app.view.BoChatItemView
        android:id="@+id/cv_friend_manage_note"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        app:item_text="备注"/>
    <com.bochat.app.app.view.BoChatItemView
        android:id="@+id/cv_friend_manage_notification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:item_text="消息免打扰"
        app:item_hasRightBtn="false"
        app:item_hasSwitchBtn="true"
        />
    <com.bochat.app.app.view.BoChatItemView
        android:id="@+id/cv_friend_manage_history"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_10"
        app:item_text="聊天记录"/>
    <com.bochat.app.app.view.BoChatItemView
        android:id="@+id/cv_friend_manage_history_clear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_10"
        app:item_text="清除聊天记录"/>
    <com.bochat.app.app.view.BoChatItemView
        android:id="@+id/cv_friend_manage_invitation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        app:item_text="推荐给好友"/>
    <com.bochat.app.app.view.BoChatItemView
        android:id="@+id/cv_friend_manage_forbidden"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:item_hasRightBtn="false"
        app:item_hasSwitchBtn="true"
        android:visibility="gone"
        app:item_text="拉黑此人"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F2F2F2">

    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/bochat_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="消息"
        app:top_hasExtBtn="true"
        app:top_hasExt2Btn="true"
        app:top_background="#fff2f2f2"
        app:top_extButtonSrc="@mipmap/ic_bochat_scan"
        app:top_extButton2Src="@mipmap/ic_bochat_add"/>
    
    <RelativeLayout
        android:id="@+id/bochat_search_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shape_search"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bochat_topbar"
        android:layout_marginTop="@dimen/dp_11">
        <TextView
            android:id="@+id/bochat_search_btn"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_bochat_search"
            android:layout_marginLeft="@dimen/dp_136"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_toRightOf="@id/bochat_search_btn"
            android:layout_centerVertical="true"
            android:text="搜索"
            android:textSize="@dimen/dp_16"
            android:textColor="#999999"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bochat_dialog_layout"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_48">
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bochat_search_layout"
        android:layout_marginTop="@dimen/dp_11">
        <FrameLayout
            android:id="@+id/conversationlist"
            android:name="io.rong.imkit.fragment.ConversationListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
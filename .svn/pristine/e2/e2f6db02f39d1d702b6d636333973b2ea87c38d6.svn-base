<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/optional_operation_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FBFAFA"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dp_15"
    android:paddingTop="@dimen/dp_9"
    android:paddingEnd="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_9">


    <RadioGroup
        android:id="@+id/group_radio"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:checked="true"
            android:id="@+id/default_sort_radio"
            android:button="@null"
            android:text="默认排序"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@drawable/market_quotation_text_color_selector"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/price_sort_radio"
            android:drawablePadding="@dimen/dp_6"
            android:layout_marginStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_50"
            android:drawableRight="@drawable/market_quotation_optional_operation_selector"
            android:textColor="@drawable/market_quotation_text_color_selector"
            android:text="最新价"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/gain_sort_radio"
            android:drawablePadding="@dimen/dp_6"
            android:layout_marginStart="@dimen/dp_17"
            android:paddingEnd="@dimen/dp_45"
            android:gravity="center"
            android:button="@null"
            android:drawableRight="@drawable/market_quotation_optional_operation_selector"
            android:textColor="@drawable/market_quotation_text_color_selector"
            android:text="涨跌幅"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </RadioGroup>


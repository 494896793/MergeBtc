<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >


    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/group_manange_bochar_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_hasBackBtn="true"
        app:top_titleText="管理员设置"
        app:top_extButton3Text="编辑"
        app:top_hasExt3Btn="true"
        app:top_extButton3TextColor="#222222">

    </com.bochat.app.app.view.BoChatTopBar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/mananger_refresh"
            android:layout_weight="14"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/group_manange_bochar_topbar">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/mananger_setting_recycleview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>


        </com.scwang.smartrefresh.layout.SmartRefreshLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></LinearLayout>
        <Button

            android:id="@+id/add_manager"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:text="添加管理员"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp_16"
            android:background="@drawable/shape_button_5dp"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"


            />
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/bochat_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_background="@color/white"
        app:top_extButtonSrc="@null"
        app:top_hasBackBtn="true"
        app:top_hasExt2Btn="false"
        app:top_hasExtBtn="false"
        app:top_titleText="我的特权" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/privilege_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bochat_topbar"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15" />
    <!--<com.scwang.smartrefresh.layout.SmartRefreshLayout-->
    <!--android:id="@+id/privilege_refresh_layout"-->
    <!--android:layout_below="@id/bochat_topbar"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <!--<com.scwang.smartrefresh.layout.header.ClassicsHeader-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content" />-->

    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:id="@+id/privilege_list"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:paddingStart="@dimen/dp_15"-->
    <!--android:paddingEnd="@dimen/dp_15"/>-->


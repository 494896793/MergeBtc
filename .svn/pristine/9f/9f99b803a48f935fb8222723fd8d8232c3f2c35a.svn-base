    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content" />-->

    <!--</com.scwang.smartrefresh.layout.SmartRefreshLayout>-->


    <LinearLayout
        android:id="@+id/no_privilege"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_37"
        android:layout_below="@id/bochat_topbar"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:src="@mipmap/ic_privilege_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_13"
            android:text="@string/privilege_no_granted"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:text="@string/privilege_more_attention"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/dp_12" />

        <Button
            android:id="@+id/privilege_go_activities"
            android:layout_width="264dp"
            android:layout_height="44dp"
            android:background="@drawable/privilege_go_activities_button_shape"
            android:text="@string/privilege_go_center"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_18" />
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/group_add_manager_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="添加管理员"
        app:top_hasExt3Btn="true"
        app:top_extButton3Text="完成"
        >

    </com.bochat.app.app.view.BoChatTopBar>
    <RelativeLayout
        android:id="@+id/cv_group_member_search_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:background="@drawable/shape_search"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_below="@id/group_add_manager_topbar">

        <TextView
            android:id="@+id/bochat_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/ic_bochat_search"
            android:drawablePadding="@dimen/dp_6"
            android:text="@string/conversation_search_str"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:textColor="@color/colorFontColorForDark"
            android:textSize="@dimen/dp_14"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/group_add_manager_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
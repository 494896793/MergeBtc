<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@mipmap/hall_bg"
    android:layout_height="match_parent">

     <com.bochat.app.app.view.BoChatTopBar
         app:top_backBtnBackground="@mipmap/ic_arrow_left_white"
         app:top_hasBackBtn="true"
        android:id="@+id/bochat_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="红包大厅"
         app:top_titleColor="#ffffff"
        app:top_hasExtBtn="false"
        app:top_hasExt2Btn="true"
        app:top_background="@color/transparent"
        app:top_extButton2Src="@mipmap/vip_icon"/>

    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/springView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </com.liaoinstan.springview.widget.SpringView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/friend_detail_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160"
                android:src="@mipmap/bg_personal_banner"
                android:scaleType="fitXY"/>

            <com.bochat.app.app.view.BoChatTopBar
                android:id="@+id/friend_detail_top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:top_backBtnBackground="@mipmap/ic_arrow_left_white"
                app:top_background="#00000000"
                app:top_hasBackBtn="true"
                app:top_titleText=""
                app:top_titleColor="@color/white"
                app:top_extButton3Text="设置"
                app:top_extButton3TextColor="#FFFFFF"
                app:top_hasExt3Btn="true"/>

            <FrameLayout
                android:id="@+id/friend_detail_icon_layout"
                android:layout_width="@dimen/dp_84"
                android:layout_height="@dimen/dp_84"
                android:layout_marginTop="@dimen/dp_49"
                android:layout_below="@id/friend_detail_top_bar"
                android:layout_centerHorizontal="true">
                <com.bochat.app.app.view.SpImageView
                    android:id="@+id/friend_detail_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_bochat_launcher"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/friend_detail_icon_layout"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/friend_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:textSize="@dimen/dp_18"
                    android:textColor="#222222"
                    android:layout_centerHorizontal="true"
                    android:text="用户名"
                    android:layout_marginTop="@dimen/dp_11"/>

                <TextView
                    android:id="@+id/friend_detail_description"
                    android:layout_width="@dimen/dp_280"
                    android:layout_height="wrap_content"
                    android:maxLength="900"
                    android:textSize="@dimen/dp_13"
                    android:textColor="#999999"
                    android:layout_centerHorizontal="true"
                    android:maxLines="2"
                    android:gravity="center"
                    android:text="这个用户很懒，什么东西也没留下。"
                    android:layout_marginTop="@dimen/dp_11"/>

                <com.bochat.app.app.view.BoChatItemView
                    android:id="@+id/friend_detail_id"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    app:item_text="博信ID"
                    app:item_content="123456"
                    app:item_hasRightBtn="false"
                    android:layout_marginTop="@dimen/dp_28"/>

                <com.bochat.app.app.view.BoChatItemView
                    android:id="@+id/friend_detail_code"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    app:item_text="个人二维码"
                    app:item_rightIcon="@mipmap/ic_friend_detail_code"/>

                <com.bochat.app.app.view.BoChatItemView
                    android:id="@+id/friend_detail_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    app:item_text="手机号码"
                    app:item_content="18888888888"
                    android:visibility="gone"
                    app:item_hasRightBtn="false"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="#FBFAFA"/>
                
                <com.bochat.app.app.view.BoChatItemView
                    android:id="@+id/friend_detail_sex"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    app:item_text="性别"
                    app:item_content="男"
                    app:item_hasRightBtn="false"/>
                <com.bochat.app.app.view.BoChatItemView
                    android:id="@+id/friend_detail_age"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    app:item_text="年龄"
                    app:item_content="18"
                    app:item_hasRightBtn="false"/>
                <com.bochat.app.app.view.BoChatItemView
                    android:id="@+id/friend_detail_area"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    app:item_text="地区"
                    app:item_content="中国-广东省-深圳市"
                    app:item_hasRightBtn="false"/>
                <Button
                    android:id="@+id/friend_detail_enter_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_32"
                    android:layout_marginBottom="@dimen/dp_47"
                    android:background="@drawable/shape_button_5dp"
                    android:text="发送消息"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/dp_17"
                    android:visibility="visible"/>
            </LinearLayout>
        </RelativeLayout>
</ScrollView>
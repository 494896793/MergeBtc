<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/red_envelopes_candy_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100" />

            <LinearLayout
                android:padding="@dimen/dp_15"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/choose_bid_relative"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@drawable/shape_gray_bg"
                    android:padding="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:text="币种选择"
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/sp_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_toLeftOf="@+id/bid_img"
                        android:layout_centerVertical="true"
                        android:id="@+id/bid_name"
                        android:layout_marginRight="@dimen/dp_1"
                        android:text=""
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/sp_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/bid_img"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/arrow_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>



                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/count_relative"
                    android:background="@drawable/shape_gray_bg"
                    android:padding="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:text="红包金额"
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/sp_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:id="@+id/input_count_edit"
                        android:background="@color/transparent"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/bid_type"
                        android:text=""
                        android:hint="填写金额"
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/sp_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:visibility="invisible"
                        android:id="@+id/bid_type"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text=""
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_181818"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/edit_money_relative"
                    android:background="@drawable/shape_gray_bg"
                    android:padding="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:text="红包个数"
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/sp_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <EditText
                        android:gravity="right"
                        android:lines="1"
                        android:inputType="number"
                        android:background="@color/transparent"
                        android:id="@+id/value_text"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text=""
                        android:hint="填写个数"
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/sp_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/dp_14"
                        android:text="可用余额："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/amount_text"
                        android:textColor="@color/flash_text"
                        android:textSize="@dimen/dp_14"
                        android:text="0.0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <EditText
                    android:id="@+id/content_edit"
                    android:layout_marginTop="@dimen/dp_16"
                    android:padding="@dimen/dp_15"
                    android:background="@drawable/shape_gray_bg"
                    android:textSize="@dimen/sp_16"
                    android:gravity="top|left"
                    android:hint="BX过百，别墅靠海！"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_70" />

                <CheckBox
                    android:id="@+id/redhall_checkbox"
                    android:checked="false"
                    android:layout_marginTop="@dimen/dp_14"
                    android:drawablePadding="@dimen/dp_6"
                    android:drawableLeft="@drawable/origin_checkbox"
                    android:text="同步发送到红包大厅，邀请更多好友进群"
                    android:button="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_31"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/bid_value_text"
                        android:text="0.0000"
                        android:textSize="@dimen/sp_40"
                        android:textColor="#222222"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/bid_name_text"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="ETC"
                        android:textColor="#222222"
                        android:textSize="@dimen/sp_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/send_bt"
                    android:layout_marginBottom="@dimen/dp_51"
                    android:textSize="@dimen/sp_16"
                    android:text="塞糖果入利是袋"
                    android:textColor="@color/white"
                    android:background="@drawable/shape_origin_deep_bt"
                    android:layout_width="@dimen/dp_158"
                    android:gravity="center"
                    android:layout_height="@dimen/dp_44" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
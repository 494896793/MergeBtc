<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_100"
        android:background="@drawable/shape_white_10dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:id="@+id/wechat_layout"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_15"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_wechat"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_wechat"/>
            <TextView
                android:layout_below="@id/icon_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信"
                android:textColor="#666666"
                android:textSize="@dimen/dp_16"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/wechat_time_line_layout"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_wechat_time_line"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_wechat_timeline"/>
            <TextView
                android:layout_below="@id/icon_wechat_time_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="朋友圈"
                android:textColor="#666666"
                android:textSize="@dimen/dp_16"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/qq_layout"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_qq"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_qq"/>
            <TextView
                android:layout_below="@id/icon_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ"
                android:textColor="#666666"
                android:textSize="@dimen/dp_16"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/weibo_layout"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_weibo"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_weibo"/>
            <TextView
                android:layout_below="@id/icon_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微博"
                android:textColor="#666666"
                android:textSize="@dimen/dp_16"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
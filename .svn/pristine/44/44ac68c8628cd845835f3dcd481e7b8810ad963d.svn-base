<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F2F2F2"
    android:layout_height="match_parent">

    <com.bochat.app.app.view.BoChatTopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="新消息通知"
        app:top_background="#FFFFFF"
        app:top_hasBackBtn="true"/>

    <com.bochat.app.app.view.BoChatItemView
        android:id="@+id/mine_settings_notification_voice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_10"
        app:item_hasRightBtn="false"
        app:item_text="声音"
        app:item_hasSwitchBtn="true"/>
    <com.bochat.app.app.view.BoChatItemView
        android:id="@+id/mine_settings_notification_vibrate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:item_hasRightBtn="false"
        app:item_text="振动"
        app:item_hasSwitchBtn="true"/>
    <com.bochat.app.app.view.BoChatItemView
        android:id="@+id/mine_settings_notification_switch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:item_hasRightBtn="false"
        app:item_text="关闭消息通知"
        app:item_hasSwitchBtn="true"/>

</LinearLayout>
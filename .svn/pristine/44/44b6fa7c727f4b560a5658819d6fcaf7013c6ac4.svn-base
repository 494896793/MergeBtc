<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">
    
    <com.bochat.app.app.view.BoChatTopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="关于我们"
        app:top_hasBackBtn="true"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_73">
        <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_mine_about_us"
            android:scaleType="fitXY"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/dp_18"
        android:text="博信 BoChat"
        android:layout_marginTop="@dimen/dp_31"
        />

    <TextView
        android:id="@+id/version_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/dp_16"
        android:textColor="#999999"
        android:text="版本号: v1.0.0"
        android:layout_marginTop="@dimen/dp_16"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_195">
        <Button
            android:id="@+id/check_update_btn"
            android:gravity="center"
            android:text="检查更新"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp_17"
            android:background="@drawable/shape_button_5dp"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_44"/>
    </RelativeLayout>

</LinearLayout>
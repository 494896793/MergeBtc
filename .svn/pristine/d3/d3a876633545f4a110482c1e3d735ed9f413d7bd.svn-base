<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flash_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF">

    <RelativeLayout
        android:id="@+id/screen_shot_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- <ImageView
        android:id="@+id/top_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:src="@mipmap/news_banner" />-->
        <ImageView
            android:id="@+id/top_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/news_banner"
            android:scaleType="fitXY"/>

        <com.bochat.app.app.view.BoChatTopBar
            android:id="@+id/dynamic_flash_bochat_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:top_textColor="#FBFAFA"
            app:top_titleText=""
            app:top_hasExt2Btn="true"
            app:top_extButton2Src="@mipmap/wallet_gold_share"
            app:top_hasBackBtn="true"
            app:top_backBtnBackground="@mipmap/ic_arrow_left_white">

        </com.bochat.app.app.view.BoChatTopBar>

        <LinearLayout
            android:id="@+id/text_layout"
            android:layout_below="@id/top_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_28"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/rise_img"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@mipmap/favorable_icon_sel"/>

                <TextView
                    android:id="@+id/detail_rise"
                    android:layout_toRightOf="@id/rise_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF666666"
                    android:textSize="@dimen/dp_11"
                    android:text="利好 1000"
                    android:layout_marginLeft="@dimen/dp_6"/>

                <ImageView
                    android:layout_toLeftOf="@id/detail_decline"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@mipmap/empty_icon_sel"/>

                <TextView
                    android:id="@+id/detail_decline"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF666666"
                    android:textSize="@dimen/dp_11"
                    android:text="利空 100"
                    android:layout_marginLeft="@dimen/dp_6" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#FFEEEEEE"/>
            <TextView
                android:id="@+id/flash_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#FF333333"
                android:textSize="@dimen/dp_18"
                android:text=""
                android:layout_marginTop="@dimen/dp_20"
                />

            <TextView
                android:id="@+id/flash_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:maxLines="10"
                android:textSize="@dimen/dp_13"

                android:textColor="#FF666666"
                android:text="的"/>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_41"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF333333"
                    android:text="官网：www.bochat.net"
                    android:textSize="@dimen/dp_11"

                    />
                <TextView
                    android:id="@+id/flash_date"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_11"
                    android:textColor="#FF666666"
                    android:text=""/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#FF0084FF"
                android:layout_marginTop="@dimen/dp_20"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                >
                <TextView
                    android:id="@+id/text_load"
                    android:layout_width="@dimen/dp_101"
                    android:layout_height="wrap_content"
                    android:textColor="#FF666666"
                    android:textSize="@dimen/dp_11"
                    android:text="长按图片识别二维码下载APP"
                    android:maxLines="2"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dp_28"
                    android:layout_below="@id/text_load"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF666666"
                    android:textSize="@dimen/dp_11"
                    android:text="世界因链而改变，社交有链才信任"
                    />

                <ImageView
                    android:id="@+id/qr_code_img"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_alignParentRight="true"
                    />



            </RelativeLayout>





        </LinearLayout>

    </RelativeLayout>
    
   



</RelativeLayout>
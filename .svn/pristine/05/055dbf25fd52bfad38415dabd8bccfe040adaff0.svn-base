<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F2F2F2"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <com.bochat.app.app.view.BoChatTopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="实名认证"
        android:background="#FFFFFF"
        app:top_hasBackBtn="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:textSize="@dimen/dp_14"
        android:textColor="#666666"
        android:text="基本资料"/>
    
    <com.bochat.app.app.view.BoChatItemView
        android:id="@+id/mine_real_name_auth_name_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:item_hasRightBtn="false"
        app:item_text="真实姓名"
        app:item_hasEditText="true"/>
    
    <com.bochat.app.app.view.BoChatItemView
        android:id="@+id/mine_real_name_auth_id_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:item_hasRightBtn="false"
        app:item_text="身份证号"
        app:item_hasEditText="true"/>

    <Button
        android:id="@+id/mine_real_name_auth_enter_btn"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/shape_red_5dp"
        android:textSize="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_60"
        android:text="提交"
        android:textColor="#FFFFFF"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_40"
        android:textSize="@dimen/dp_14"
        android:lineSpacingExtra="@dimen/dp_10"
        android:textColor="#999999"
        android:text="温馨提示\n为了保障您的资产安全，请填写真实的姓名及身份证信息，假冒或盗用他人信息而造成的资产损失，平台概不负责。"/>
</LinearLayout>
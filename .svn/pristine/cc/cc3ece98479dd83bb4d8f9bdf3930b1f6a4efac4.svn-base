<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_220"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/pay_password_btn_layout"
            android:layout_marginBottom="@dimen/dp_100"
            android:background="@drawable/shape_white_5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_17"
                android:textColor="#181818"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_13"
                android:text="请输入支付密码"/>
            <Button
                android:id="@+id/pay_password_dialog_exit_btn"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:background="@mipmap/ic_gray_x_72"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_9"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#DFDFDF"
                android:layout_below="@id/pay_password_dialog_exit_btn"
                android:layout_marginTop="@dimen/dp_7"
                />
            <TextView
                android:id="@+id/pay_password_dialog_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FE695E"
                android:layout_below="@id/pay_password_dialog_exit_btn"
                android:layout_marginTop="@dimen/dp_38"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/dp_33"/>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pay_password_dialog_amount"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_26">
                <TextView
                    android:id="@+id/pay_password_input_1"
                    android:gravity="center"
                    android:textSize="@dimen/dp_18"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:background="@drawable/shape_stroke_gray_d2d2d2_1"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"/>
                <TextView
                    android:id="@+id/pay_password_input_2"
                    android:gravity="center"
                    android:textSize="@dimen/dp_18"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:background="@drawable/shape_stroke_gray_d2d2d2_1"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"/>
                <TextView
                    android:id="@+id/pay_password_input_3"
                    android:gravity="center"
                    android:textSize="@dimen/dp_18"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:background="@drawable/shape_stroke_gray_d2d2d2_1"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"/>
                <TextView
                    android:id="@+id/pay_password_input_4"
                    android:gravity="center"
                    android:textSize="@dimen/dp_18"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:background="@drawable/shape_stroke_gray_d2d2d2_1"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"/>
                <TextView
                    android:id="@+id/pay_password_input_5"
                    android:gravity="center"
                    android:textSize="@dimen/dp_18"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:background="@drawable/shape_stroke_gray_d2d2d2_1"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"/>
                <TextView
                    android:id="@+id/pay_password_input_6"
                    android:gravity="center"
                    android:textSize="@dimen/dp_18"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:background="@drawable/shape_stroke_gray_d2d2d2_1"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"/>
            </LinearLayout>
            
        </RelativeLayout>
        
        <LinearLayout
            android:id="@+id/pay_password_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:background="#FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <Button
                    android:id="@+id/pay_password_btn_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_stroke_gray_1"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="@dimen/dp_27"
                    android:textColor="#333333"/>
                <Button
                    android:id="@+id/pay_password_btn_2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_stroke_gray_1"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textSize="@dimen/dp_27"
                    android:textColor="#333333"/>
                <Button
                    android:id="@+id/pay_password_btn_3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_stroke_gray_1"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textSize="@dimen/dp_27"
                    android:textColor="#333333"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <Button
                    android:id="@+id/pay_password_btn_4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_stroke_gray_1"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:textSize="@dimen/dp_27"
                    android:textColor="#333333"/>
                <Button
                    android:id="@+id/pay_password_btn_5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_stroke_gray_1"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:textSize="@dimen/dp_27"
                    android:textColor="#333333"/>
                <Button
                    android:id="@+id/pay_password_btn_6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_stroke_gray_1"
                    android:layout_height="match_parent"
                    android:text="6"
                    android:textSize="@dimen/dp_27"
                    android:textColor="#333333"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <Button
                    android:id="@+id/pay_password_btn_7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_stroke_gray_1"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/dp_27"
                    android:text="7"
                    android:textColor="#333333"/>
                <Button
                    android:id="@+id/pay_password_btn_8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_stroke_gray_1"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:textSize="@dimen/dp_27"
                    android:textColor="#333333"/>
                <Button
                    android:id="@+id/pay_password_btn_9"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_stroke_gray_1"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:textSize="@dimen/dp_27"
                    android:textColor="#333333"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">
                <Button
                    android:id="@+id/pay_password_btn_empty"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="#F2F2F2"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/dp_27"
                    android:textColor="#333333"/>
                <Button
                    android:id="@+id/pay_password_btn_0"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_stroke_gray_1"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="@dimen/dp_27"
                    android:textColor="#333333"/>
                <RelativeLayout
                    android:id="@+id/pay_password_btn_back"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="@dimen/dp_39"
                        android:layout_height="@dimen/dp_17"
                        android:src="@mipmap/ic_gray_delete"
                        android:scaleType="fitXY"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/mine_wallet_property_layout"
        android:layout_width="@dimen/dp_363"
        android:layout_height="@dimen/dp_173"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/ic_mine_i_chang_rl_bg">
        
        <ImageView
            android:id="@+id/iv_money"
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_21"
            android:src="@mipmap/ic_mine_money" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@+id/iv_money"
            android:text="我的零钱"
            android:textColor="#ffffffff"
            android:textSize="@dimen/dp_14" />
        <TextView
            android:id="@+id/mine_wallet_property_amount"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/dp_250"
            android:layout_marginBottom="@dimen/dp_44"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="0.0"
            android:textColor="#ffffffff"
            android:textSize="@dimen/dp_30" />
        <TextView
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_46"

            android:layout_toRightOf="@id/mine_wallet_property_amount"
            android:text="元"
            android:textColor="#ffffffff"
            android:textSize="@dimen/dp_18" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mine_wallet_property_layout"
        android:layout_marginTop="@dimen/dp_47">

        <Button
            android:id="@+id/recharge_btn"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@drawable/shape_login_btn"
            android:text="充值"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp_17" />

        <Button
            android:id="@+id/crash_out_btn"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/deal_friend_refuse"
            android:text="提现"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp_17" />
    </RelativeLayout>
</RelativeLayout>
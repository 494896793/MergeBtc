<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dynamic_mk_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/dp_15">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dynamic_mk_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            tools:text="XLM / ETH"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/dp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dynamic_mk_item_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="量 42,0046"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/dp_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/dp_15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dynamic_mk_item_new_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            tools:text="0.00016668"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dynamic_mk_item_exchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="≈￥0.22"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/dp_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|end">

        <Button
            android:id="@+id/dynamic_mk_item_stock_index"
            android:layout_width="@dimen/dp_74"
            android:layout_height="@dimen/dp_26"
            android:background="@drawable/shape_up_red"
            tools:text="+0.48%"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
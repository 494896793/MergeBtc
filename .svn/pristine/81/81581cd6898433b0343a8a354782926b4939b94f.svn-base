<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/coin_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/home_popup_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/coin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/home_popup_font"
            android:layout_marginStart="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_41" />

        <Button
            android:id="@+id/coin_btn"
            android:layout_width="@dimen/dp_167"
            android:layout_height="@dimen/dp_45"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_22"
            android:paddingTop="@dimen/dp_12"
            android:gravity="center_horizontal"
            android:background="@mipmap/home_popup_btn"
            android:layout_marginTop="@dimen/dp_289"
            android:text="立即查看"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_14" />

    </RelativeLayout>

    <Button
        android:id="@+id/coin_close"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_margin="@dimen/dp_15"
        android:layout_below="@id/coin_layout"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/home_popup_close" />
</RelativeLayout>

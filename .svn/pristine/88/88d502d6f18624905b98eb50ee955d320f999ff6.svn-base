<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:gravity="center_vertical"

    >
    
    <ImageView
        android:id="@+id/recharge_type_icon"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:src="@mipmap/wallet_recharge_wechat"
       android:layout_marginLeft="@dimen/dp_15"
        />

    <TextView
        android:id="@+id/recharge_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#222222"
        android:text="微信支付"
        android:layout_toRightOf="@id/recharge_type_icon"
        android:layout_marginLeft="@dimen/dp_12"
        />

    <ImageView

        android:id="@+id/recharge_type_radio"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@mipmap/administrators_choice_sel"
       />

</RelativeLayout>
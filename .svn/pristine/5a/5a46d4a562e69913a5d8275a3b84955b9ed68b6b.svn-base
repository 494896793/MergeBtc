<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:background="#FFFFFF"
    android:padding="@dimen/dp_15"
    android:clickable="false">

    <com.bochat.app.app.view.SpImageView
        android:id="@+id/recommend_friend_icon"
        android:layout_width="@dimen/dp_43"
        android:layout_height="@dimen/dp_43"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/recommend_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="@dimen/dp_15"
        tools:text="heiehi"
        android:layout_toEndOf="@id/recommend_friend_icon"
        android:layout_marginStart="@dimen/dp_10"/>
    <TextView
        android:id="@+id/recommend_friend_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个性签名"
        android:textColor="#999999"
        android:textSize="@dimen/dp_13"
        android:layout_toEndOf="@id/recommend_friend_icon"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_below="@id/recommend_friend_name"
        android:ellipsize="end"
        />

    <Button
        android:id="@+id/recommend_friend_add"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_26"
        android:text="添加"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_12"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_add_friend"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F2F2F2"
    android:layout_height="match_parent">
    
    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/mine_edit_user_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="编辑个人信息"
        app:top_background="#FFFFFF"
        app:top_hasBackBtn="true"
        app:top_hasExt3Btn="true"
        app:top_extButton3Text="保存"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
        <com.bochat.app.app.view.SpImageView
            android:id="@+id/mine_edit_user_icon_btn"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:src="@mipmap/ic_register_icon"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/register_top_bar"
            android:focusable="true"
            android:clickable="true"
            android:layout_marginTop="@dimen/dp_30"/>
        <Button
            android:id="@+id/mine_edit_user_icon_camera_btn"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_22"
            android:background="@mipmap/ic_register_icon_camera"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/register_top_bar"
            android:layout_marginTop="@dimen/dp_60"/>
        
        <EditText
            android:id="@+id/mine_edit_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:background="@null"
            android:textColor="#181818"
            android:minWidth="@dimen/dp_100"
            android:gravity="center"
            android:textSize="@dimen/dp_18"
            android:text="10000000"
            android:layout_below="@id/mine_edit_user_icon_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_25"/>
        
        <ImageView
            android:id="@+id/mine_edit_user_name_edit_btn"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/ic_gray_edit"
            android:layout_below="@id/mine_edit_user_icon_btn"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_toRightOf="@id/mine_edit_user_name"
            android:layout_marginLeft="@dimen/dp_5"
            />
        
        <fj.edittextcount.lib.FJEditTextCount
            android:id="@+id/mine_edit_user_description"
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_140"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_light_gray_5"
            android:paddingLeft="@dimen/dp_10"
            app:etHint="个人签名"
            app:etLineColor="#00000000"
            app:etMaxLength="60"
            app:etMinHeight="@dimen/dp_140"
            app:etPromptTextColor="#999999"
            app:etPromptTextSize="@dimen/dp_14"
            app:etTextColor="#000000"
            android:layout_below="@id/mine_edit_user_name_edit_btn"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            app:etTextSize="@dimen/dp_14"
            app:etType="percentage" />
        
    </RelativeLayout>

    <com.bochat.app.app.view.BoChatItemView
        android:id="@+id/mine_edit_user_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:item_hasRightBtn="false"
        app:item_text="账号"
        app:item_content=""
        app:item_content_color="#181818"/>
    <com.bochat.app.app.view.BoChatItemView
        android:id="@+id/mine_edit_user_age"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:item_hasRightBtn="true"
        app:item_text="年龄"
        app:item_content=""
        app:item_content_color="#181818"/>
    <com.bochat.app.app.view.BoChatItemView
        android:id="@+id/mine_edit_user_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:item_hasRightBtn="true"
        app:item_text="地区"
        app:item_content=""
        app:item_content_color="#181818"/>
    
</LinearLayout>
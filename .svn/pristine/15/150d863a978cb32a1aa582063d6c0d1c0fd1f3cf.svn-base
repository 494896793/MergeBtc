<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/bochat_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="消息"
        app:top_hasExtBtn="true"
        app:top_hasExt2Btn="true"
        app:top_extButtonSrc="@mipmap/ic_bochat_scan"
        app:top_extButton2Src="@mipmap/ic_bochat_add"/>

    <LinearLayout
        android:paddingLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingBottom="@dimen/dp_6"
            android:paddingTop="@dimen/dp_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.bochat.app.app.view.SpImageView
                android:id="@+id/head_img"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48" />
            <TextView
                android:id="@+id/userName"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/head_img"
                android:textColor="@color/color_181818"
                android:textSize="@dimen/sp_16"
                android:text="DOLIN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginRight="@dimen/dp_14"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_arrow_left_black"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@color/base_background"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>
        <TextView
            android:paddingTop="@dimen/dp_11"
            android:paddingBottom="@dimen/dp_11"
            android:textSize="@dimen/sp_16"
            android:text="附加信息"
            android:textColor="#999999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/info_tx"
            android:paddingTop="@dimen/dp_11"
            android:paddingBottom="@dimen/dp_11"
            android:textSize="@dimen/sp_16"
            android:text="你好，很高兴认识你"
            android:textColor="@color/color_181818"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_60"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/refuse_bt"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_weight="1"
            android:textSize="@dimen/sp_17"
            android:textColor="#ffffff"
            android:text="拒绝"
            android:background="@drawable/deal_friend_refuse"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44" />
        <Button
            android:id="@+id/accept_bt"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_weight="1"
            android:textSize="@dimen/sp_17"
            android:textColor="#ffffff"
            android:text="同意"
            android:background="@drawable/deal_friend_accept"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44" />
    </LinearLayout>
</LinearLayout>
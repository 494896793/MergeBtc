<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F2F2F2">

    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/bochat_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="通讯录"
        app:top_background="#fff2f2f2"
        />

    <RelativeLayout
        android:id="@+id/bochat_search_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:background="@drawable/shape_search"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_below="@id/bochat_topbar"
        android:layout_marginTop="@dimen/dp_11">
        <TextView
            android:id="@+id/bochat_search_btn"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_bochat_search"
            android:layout_marginLeft="@dimen/dp_136"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_toRightOf="@id/bochat_search_btn"
            android:layout_centerVertical="true"
            android:text="搜索"
            android:textSize="@dimen/dp_16"
            android:textColor="#999999"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/bochat_search_layout"
        android:id="@+id/top_list_linear"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56">
            <ImageView
                android:src="@mipmap/apply_icon"
                android:id="@+id/img1"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24" />
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img1"
                android:textSize="@dimen/dp_17"
                android:textColor="@color/color_181818"
                android:text="最新申请"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img2"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_arrow_left_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/num_notice_tx"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="@drawable/message_notice"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/img2"
                android:layout_marginRight="@dimen/dp_12"
                android:textSize="@dimen/sp_12"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/view_line"
        android:layout_below="@id/top_list_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
    <LinearLayout
        android:layout_below="@id/view_line"
        android:id="@+id/top_list_linear2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56">
            <ImageView
                android:src="@mipmap/group_icon"
                android:id="@+id/img3"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24" />
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img3"
                android:textSize="@dimen/dp_17"
                android:textColor="@color/color_181818"
                android:text="搜索群聊"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img4"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_arrow_left_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="@drawable/message_notice"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/img4"
                android:layout_marginRight="@dimen/dp_12"
                android:textSize="@dimen/sp_12"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tableayout"
        android:layout_below="@id/top_list_linear2"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:tl_indicator_width="@dimen/dp_39"
        app:tl_indicator_color="#FE695E"
        app:tl_indicator_height="@dimen/dp_3"
        app:tl_indicator_corner_radius="@dimen/dp_2"
        app:tl_textSelectColor="#FE695E"
        app:tl_textsize="@dimen/dp_16"
        app:tl_textUnselectColor="#000000"
        app:tl_tab_space_equal="true"
        android:background="#FFFFFF"/>
    
    
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_below="@id/tableayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <com.bochat.app.app.view.SideBar
        android:layout_below="@id/tableayout"
        android:id="@+id/sidebar"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/dp_20"
        android:layout_height="match_parent" />
    
</RelativeLayout>
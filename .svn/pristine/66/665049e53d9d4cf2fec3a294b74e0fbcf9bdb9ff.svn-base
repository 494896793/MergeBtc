<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="#FFFFFF"
              android:orientation="vertical">

    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/mine_token_detail_transfer_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_hasBackBtn="true"
        app:top_titleText="BTC"
        app:top_background="#F2F2F2"/>


    <RelativeLayout
        android:id="@+id/mine_token_detail_transfer_detail_layout"
        android:layout_below="@id/mine_token_detail_transfer_top_bar"
        android:layout_width="@dimen/dp_375"
        android:layout_height="wrap_content"
        android:background="#F2F2F2">

        <ImageView
            android:id="@+id/mine_token_detail_transfer_detail_icon"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_53"
            android:src="@mipmap/ic_mine_receive_b" />

        <TextView
            android:id="@+id/mine_token_detail_transfer_detail_amount"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_32"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_121"
            android:src="@mipmap/ic_mine_receive_b"
            android:text="BTC"
            android:textColor="#181818"
            android:textSize="@dimen/dp_23" />

        <TextView
            android:id="@+id/mine_token_detail_transfer_detail_rmb"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_32"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_154"
            android:src="@mipmap/ic_mine_receive_b"
            android:text="≈"
            android:textColor="#181818"
            android:textSize="@dimen/dp_14" />


        <RelativeLayout
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_199"
            android:layout_marginBottom="@dimen/dp_28"
            android:background="@drawable/shap_mine_details_link_rl_bg">

            <TextView
                android:id="@+id/mine_token_detail_transfer_detail_address"
                android:layout_width="@dimen/dp_238"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="" />
            
            <ImageView
                android:id="@+id/mine_token_detail_transfer_detail_copy_btn"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_14"
                android:src="@mipmap/ic_mine_link" />

        </RelativeLayout>


    </RelativeLayout>

    <ListView
        android:id="@+id/mine_token_detail_transfer_detail_list"
        android:layout_below="@id/mine_token_detail_transfer_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_210">
        
    </ListView>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/mine_token_detail_transfer_detail_list"
        android:background="#FFFFFF">
        <Button
            android:id="@+id/mine_token_detail_transfer_btn"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_btn_5dp"
            android:layout_marginBottom="@dimen/dp_30"
            android:text="发送"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp_17" />

        <Button
            android:id="@+id/mine_token_detail_receive_btn"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_30"
            android:background="@drawable/deal_friend_refuse"
            android:text="接收"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp_17" />
    </RelativeLayout>
</RelativeLayout>
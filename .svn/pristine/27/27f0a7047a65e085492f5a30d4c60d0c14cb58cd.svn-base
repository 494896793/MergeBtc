<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_400"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_white_10dp">
        
        <TextView
            android:id="@+id/debug_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="#222222"
            android:textSize="@dimen/dp_15"
            android:text="参数配置"
            />
        
        <ListView
            android:id="@+id/debug_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/debug_title"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_above="@id/debug_btn"
            android:layout_marginBottom="@dimen/dp_20">
        </ListView>
        
        <Button
            android:id="@+id/debug_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/shape_button_5dp"
            android:text="退出"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp_16"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/shape_white_bg"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_107">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="@dimen/dp_202"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:ellipsize="end"
            android:lines="2"
            android:maxEms="10"
            android:text="BoChat1.0全新改版上线！BoChat1.0全新改版上线！0全新改版上线"
            android:textColor="#222222"
            android:textSize="@dimen/sp_16" />
        
        <ImageView
            android:id="@+id/notice_image"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_75"
            android:layout_toRightOf="@id/title_text"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_17"/>

        <TextView
            android:id="@+id/group_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="@dimen/dp_12"
            android:text="BoChat运营团队"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_below="@id/title_text"
            />
        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="@dimen/dp_12"
            android:text="2019-3-21"
            android:layout_marginTop="@dimen/dp_21"

           android:layout_toLeftOf="@id/notice_image"
            android:layout_below="@id/title_text"
            />



        <TextView
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@id/title_text"

            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/group_text"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#FFF7F7F7"/>



    </RelativeLayout>

</LinearLayout>
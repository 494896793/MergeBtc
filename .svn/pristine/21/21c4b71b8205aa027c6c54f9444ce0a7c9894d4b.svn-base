<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14"
        android:orientation="vertical">
        <com.bochat.app.app.view.BoChatTopBar
            android:id="@+id/bochat_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:top_hasBackBtn="true"
            app:top_background="#FFFFFF"
            app:top_titleText="加群方式"/>

        <ListView
            android:id="@+id/cv_group_manage_join_type_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:layout_marginTop="@dimen/dp_20"
            >
        </ListView>
    </LinearLayout>



    <Button
        android:id="@+id/commit_join_type"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:text="提交"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dp_16"
        android:background="@drawable/shape_button_5dp"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"


        />
</LinearLayout>
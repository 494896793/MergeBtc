public class GroupManagePresenter extends BasePresenter<GroupManageContract.View> implements GroupManageContract.Presenter{
   
    private GroupEntity groupEntity;
    
    @Override
    public void initInjector() {
        getBusinessComponent().inject(this);
    }
    
    @Override
    public void onViewRefresh() {
        super.onViewRefresh();
        Intent intent = getView().getViewIntent();
        if(intent.hasExtra(RouteExtra.GroupEntity)){
            groupEntity = (GroupEntity)intent.getSerializableExtra(RouteExtra.GroupEntity);
            getView().updateGroupInfo(groupEntity);
        }
    }

    @Override
    public boolean isActive() {
        return super.isActive() && groupEntity != null;
    }

    @Override
    public void onGroupEditClick() {
        if(isActive()){
            ARouter.getInstance().build(RouteTable.CONVERSATION_GROUP_MANAGE_EDIT)
                    .withSerializable(RouteExtra.GroupEntity, groupEntity).navigation();
        }
    }

    @Override
    public void onGroupForbiddenClick() {
        if(isActive()) {
            ARouter.getInstance().build(RouteTable.CONVERSATION_GROUP_MANAGE_FORBIDDEN)
                    .withSerializable(RouteExtra.GroupEntity, groupEntity).navigation();
        }
    }

    @Override
    public void onGroupUpgradeClick() {
        if(isActive()) {
            ARouter.getInstance().build(RouteTable.CONVERSATION_GROUP_MANAGE_UPGRADE)
                    .withSerializable(RouteExtra.GroupEntity, groupEntity).navigation();
        }
    }

    @Override
    public void onGroupManagerSettingClick() {
        if(isActive()){
            
        }
    }

    @Override
    public void onGroupJoinFilterClick() {
        if(isActive()){
            ARouter.getInstance().build(RouteTable.CONVERSATION_GROUP_MANAGE_JOIN_FILTER)
                    .withSerializable(RouteExtra.GroupEntity, groupEntity).navigation();
        }
    }
}

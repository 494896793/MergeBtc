<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/entrust_bs_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/entrust_bs_txt"
            android:layout_width="34dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:background="@drawable/entrust_buy_shape"
            android:gravity="center"
            android:text="买入"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_14"
            android:layout_toStartOf="@id/entrust_bs_revoke"
            android:layout_toEndOf="@id/entrust_bs_txt"
            android:orientation="vertical">

            <TextView
                android:id="@+id/entrust_bs_progress_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_4"
                android:text="当前进度80%"
                android:textSize="@dimen/sp_11" />

            <ProgressBar
                android:id="@+id/entrust_bs_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:progressDrawable="@drawable/entrust_progress_shape" />
        </LinearLayout>

        <TextView
            android:id="@+id/entrust_bs_revoke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="撤销"
            android:textColor="@color/color_4591EC" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/entrust_bs_head"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginBottom="@dimen/sp_14"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/buy_count_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_14"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/buy_count_top_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="买入数量"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/buy_count_cell_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_222222"
                    android:textSize="@dimen/sp_14"
                    tools:text="260,000.0000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/buy_price_top_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="买入单价"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/buy_price_cell_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_222222"
                    android:textSize="@dimen/sp_14"
                    tools:text="260,000.0000" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/entrust_time_top_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="委托时间"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/entrust_time_cell_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_222222"
                    android:textSize="@dimen/sp_14"
                    tools:text="260,000.0000" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/deal_count_top_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成交数量"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/deal_count_cell_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_222222"
                    android:textSize="@dimen/sp_14"
                    tools:text="260,000.0000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/transaction_amount_top_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成交金额"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/transaction_amount_cell_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_222222"
                    android:textSize="@dimen/sp_14"
                    tools:text="260,000.0000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/service_charge_top_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="手续费"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/service_charge_cell_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_222222"
                    android:textSize="@dimen/sp_14"
                    tools:text="260,000.0000" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
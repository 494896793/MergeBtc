<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="#FFFFFF"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <com.bochat.app.app.view.BoChatTopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_hasBackBtn="true"
        android:background="#FFFFFF"
        app:top_titleText="提现"
        />

    <RelativeLayout
        android:id="@+id/mine_property_cash_out_select_bank_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_37"

        >

        <TextView
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行卡"
            android:textSize="@dimen/dp_16"
            android:textColor="#222222"

            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/cion_img"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_13"
            android:src="@mipmap/ic_arrow_right_gray_7x13"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"/>


        <TextView
            android:id="@+id/mine_property_cash_out_select_bank_card_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请先绑定银行卡"
            android:layout_toLeftOf="@id/cion_img"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"/>

        <ImageView
            android:id="@+id/mine_bank_card_icon"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_toLeftOf="@id/mine_property_cash_out_select_bank_card_id"
            android:visibility="gone"/>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#F7F7F7"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_15"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        >

        <TextView
            android:id="@+id/tv_input_max"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_18"
            android:text="请输入提现金额"
            android:textColor="#222222"
            android:textSize="@dimen/dp_16" />

        <LinearLayout
            android:layout_alignBottom="@id/tv_input_max"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额："
                android:textColor="#181818"
                android:layout_marginLeft="@dimen/dp_17"
                android:textSize="@dimen/dp_14" />
            <TextView
                android:id="@+id/mine_property_cash_out_money"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:text="￥50000.00"
                android:textColor="#0084FF"
                android:textSize="@dimen/dp_14"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_unit"
            android:layout_alignBottom="@id/mine_property_cash_out_amount"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_19"
            android:layout_marginBottom="@dimen/dp_9"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_85"
            android:text="￥"
            android:textColor="#181818"
            android:textSize="@dimen/sp_16" />



        <EditText
            android:id="@+id/mine_property_cash_out_amount"

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_78"
            android:layout_toRightOf="@+id/tv_unit"
            android:background="@null"
            android:hint="0.00"
            android:inputType="numberDecimal"
            android:maxLength="8"
            android:textColor="#181818"
            android:textColorHint="#000000"
            android:textSize="@dimen/dp_30"/>




    </RelativeLayout>

    <View
        android:id="@+id/tv_div"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/tv_unit"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#F7F7F7" />

    <LinearLayout
        android:id="@+id/mine_property_cash_out_calculat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="手续费：￥"
            android:textColor="#999999"
            android:textSize="@dimen/dp_12"/>

        <TextView
            android:id="@+id/mine_property_cash_out_charge"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:text="0.00"
            android:textColor="#999999"
            android:textSize="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_27"
            />
        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实际到账："
            android:textColor="#999999"
            android:textSize="@dimen/dp_12"
            />
        <TextView
            android:id="@+id/mine_property_cash_out_real_amount"
            android:layout_toRightOf="@id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:text="￥0.00"
            android:textColor="#999999"
            android:textSize="@dimen/dp_12"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/mine_property_cash_out_to_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入金额超过零钱余额"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_16"
        android:textSize="@dimen/dp_12"
        android:clickable="true"
        android:focusable="true"
        android:textColor="#FE695E"
        android:visibility="gone"
        />


    <Button
        android:id="@+id/mine_property_cash_out_enter_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_58"
        android:background="@drawable/shape_login_btn"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="提现"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dp_16" />

    <TextView
        android:layout_marginTop="@dimen/dp_24"
        android:layout_width="@dimen/dp_315"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/dp_2"
        android:text="温馨提示"
        android:textColor="#999999"
        android:textSize="@dimen/dp_14"
        />

    <TextView
        android:layout_width="@dimen/dp_315"
        android:layout_height="@dimen/dp_41"
        android:layout_gravity="center"
        android:paddingTop="@dimen/dp_2"
        android:text="1、限额说明：单笔提现金额不得低于100元，最高不得大于20000元；"
        android:textColor="#999999"
        android:textSize="@dimen/dp_14"/>
    <TextView
        android:paddingTop="@dimen/dp_2"
        android:layout_width="@dimen/dp_315"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="2、手续费：每笔提现平台会收取0.5%的手续费；"
        android:textColor="#999999"
        android:textSize="@dimen/dp_14"/>
    <TextView
        android:paddingTop="@dimen/dp_2"
        android:layout_width="@dimen/dp_315"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="3、到账时间：提现将会在1~3个工作日内到账，如有任何疑问，请联系客服；"
        android:textColor="#999999"
        android:textSize="@dimen/dp_14"/>


    
</LinearLayout>
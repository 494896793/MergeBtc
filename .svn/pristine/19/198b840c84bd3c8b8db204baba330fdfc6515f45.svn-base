<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:scaleType="fitXY"
        android:src="@mipmap/vip_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_203" />

    <com.bochat.app.app.view.BoChatTopBar
        app:top_backBtnBackground="@mipmap/ic_arrow_left_white"
        app:top_hasBackBtn="true"
        android:id="@+id/bochat_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="红包大厅VIP"
        app:top_titleColor="#ffffff"
        app:top_hasExtBtn="false"
        app:top_hasExt2Btn="false"
        app:top_background="@color/transparent"
        />

    <ScrollView
        android:layout_below="@id/bochat_topbar"
        android:layout_marginTop="@dimen/dp_107"
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:paddingBottom="@dimen/dp_20"
                android:background="@drawable/shape_white_bg"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <GridView
                    android:paddingRight="@dimen/dp_25"
                    android:paddingTop="@dimen/dp_44"
                    android:paddingLeft="@dimen/dp_25"
                    android:verticalSpacing="@dimen/dp_36"
                    android:horizontalSpacing="@dimen/dp_18"
                    android:id="@+id/grid_view"
                    android:scrollbars="none"
                    android:numColumns="2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"></GridView>
                <TextView
                    android:layout_marginTop="@dimen/dp_26"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:id="@+id/title_money"
                    android:textColor="#222222"
                    android:textSize="@dimen/dp_14"
                    android:text="零钱余额："
                    android:layout_below="@id/grid_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/money_text"
                    android:textSize="@dimen/dp_14"
                    android:textColor="#FF8D03"
                    android:text="1000.00元"
                    android:layout_alignTop="@id/title_money"
                    android:layout_toRightOf="@id/title_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:id="@+id/pay_bt"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_43"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/origin_bt"
                android:elevation="@dimen/dp_2"
                android:text="立即支付"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_18"
                android:layout_width="@dimen/dp_264"
                android:layout_height="@dimen/dp_44" />
            <TextView
                android:layout_marginBottom="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_gravity="center_horizontal"
                android:text="购买多次VIP有效期会自动延长"
                android:textSize="@dimen/dp_12"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>



</RelativeLayout>
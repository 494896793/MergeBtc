<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F2F2F2">
    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/add_friend_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="添加朋友"
        app:top_hasBackBtn="true"/>
    <RelativeLayout
        android:id="@+id/add_friend_search_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="#FFFFFF"
        android:focusable="true"
        android:clickable="true"
        android:layout_below="@id/add_friend_top_bar">
        <ImageView
            android:id="@+id/ic_search_icon"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/ic_add_friend_search"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_toRightOf="@id/ic_search_icon"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="搜索"
            android:textColor="#999999"
            android:textSize="@dimen/dp_16"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    
    <TextView
        android:id="@+id/add_friend_id"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@id/add_friend_search_layout"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginLeft="@dimen/dp_116"
        android:text="我的ID: 5469876"
        android:textColor="#000000"
        android:textSize="@dimen/dp_14"/>
    
    <ImageView
        android:id="@+id/add_friend_qr_card"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_below="@id/add_friend_search_layout"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@id/add_friend_id"
        android:layout_marginLeft="@dimen/dp_5"
        android:src="@mipmap/ic_add_friend_code"
        android:scaleType="fitXY"/>
    <RelativeLayout
        android:id="@+id/add_friend_scan_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_below="@id/add_friend_id"
        android:background="#FFFFFF"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginTop="@dimen/dp_12">
        <ImageView
            android:id="@+id/ic_scan_icon"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/ic_add_friend_scan"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:text="扫一扫"
            android:textSize="@dimen/dp_16"
            android:textColor="#000000"
            android:layout_toRightOf="@id/ic_scan_icon"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_8"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:text="扫描二维码名片"
            android:textSize="@dimen/dp_14"
            android:textColor="#999999"
            android:layout_toRightOf="@id/ic_scan_icon"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_8"
            />
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/ic_add_friend_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_8"
            />
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:background="#FFFFFF"
    android:id="@+id/flash_layout"
    >

    <ImageView

        android:id="@+id/dynamic_flash_spot"
        android:layout_width="@dimen/dp_9"
        android:layout_height="@dimen/dp_9"

        android:background="@drawable/shape_circular_blue_9"/>

    <ImageView

        android:layout_width="@dimen/dp_1"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_below="@id/dynamic_flash_spot"
        android:background="#F7F7F7" />


    <TextView
        android:id="@+id/flash_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16:20"
        android:textColor="#222222"
        android:textSize="@dimen/dp_12"

        android:layout_toRightOf="@id/dynamic_flash_spot"
        android:layout_marginLeft="@dimen/dp_16"
        />

    <TextView
        android:id="@+id/flash_title"
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:layout_below="@id/flash_date"
        android:layout_alignLeft="@id/flash_date"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        
        android:textColor="#222222"

        android:textSize="@dimen/dp_15" />

    <TextView
        android:id="@+id/flash_content"
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:layout_below="@id/flash_title"
        android:layout_alignLeft="@id/flash_date"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="22dp"
        android:text=""
        android:textColor="#666666"
        android:textSize="@dimen/dp_14" />


    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@id/flash_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_alignRight="@id/flash_content"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/flash_rise_img"

            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@mipmap/favorable_icon"/>

        <TextView
            android:id="@+id/flash_rise_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="利好 1"
            android:padding ="@dimen/dp_2"
            android:textColor="#999999"
            android:textSize="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_4"/>

        <ImageView
            android:id="@+id/flash_decline_img"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@mipmap/empty_icon"
            android:layout_marginLeft="@dimen/dp_38"/>

        <TextView
            android:id="@+id/flash_decline_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="利空 0"
            android:textColor="#999999"
            android:textSize="@dimen/dp_12"
            android:padding ="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_4"/>

        <ImageView
            android:id="@+id/flash_share_img"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:background="@mipmap/share_icon"
            android:layout_marginLeft="@dimen/dp_36"/>

        <TextView
            android:id="@+id/flash_share_text"
            android:padding ="@dimen/dp_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享"
            android:textColor="#999999"
            android:textSize="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_4"/>


    </LinearLayout>





</RelativeLayout>
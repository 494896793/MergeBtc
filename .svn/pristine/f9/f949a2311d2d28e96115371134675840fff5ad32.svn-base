<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg_default">
    
    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/register_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_background="#F2F2F2"
        app:top_titleText="填写个人信息"/>
    
    <com.bochat.app.app.view.SpImageView
        android:id="@+id/register_icon_btn"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:src="@mipmap/ic_register_icon"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/register_top_bar"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginTop="@dimen/dp_30"/>

    <Button
        android:id="@+id/register_icon_camera_btn"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_22"
        android:background="@mipmap/ic_register_icon_camera"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/register_top_bar"
        android:layout_marginTop="@dimen/dp_60"/>
    
    <TextView
        android:id="@+id/register_id_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_28"
        android:layout_below="@id/register_icon_btn"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_centerHorizontal="true"
        android:textColor="#333333"
        android:textSize="@dimen/dp_20"
        />
    
    <RelativeLayout
        android:id="@+id/register_nick_layout"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/register_id_text"
        android:background="@drawable/shape_register_item"
        android:layout_marginTop="@dimen/dp_79"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:text="昵称"
            android:textColor="#333333"
            android:textSize="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <EditText
            android:id="@+id/register_nick_input"
            android:layout_width="@dimen/dp_200"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:maxLength="15"
            android:textSize="@dimen/dp_16"
            android:background="@null"
            android:hint="请输入昵称"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/register_sex_layout"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/register_nick_layout"
        android:background="@drawable/shape_register_item"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:text="性别"
            android:textColor="#333333"
            android:textSize="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/register_sex_women"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:text="女"
            android:textColor="#181818"
            android:textSize="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            />
        
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/register_sex_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/register_sex_women"
            android:layout_marginRight="@dimen/dp_10"
            android:theme="@style/MySwitch"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:text="男"
            android:textColor="#181818"
            android:textSize="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/register_sex_btn"
            android:layout_marginRight="@dimen/dp_10"
            />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/register_area_layout"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/register_sex_layout"
        android:background="@drawable/shape_register_item"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:clickable="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:text="地区"
            android:textColor="#333333"
            android:textSize="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/register_area_btn"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@mipmap/ic_arrow_left_black"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_8"/>
        <TextView
            android:id="@+id/register_area_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/register_area_btn"
            android:layout_marginRight="@dimen/dp_6"
            android:textColor="#999999"
            android:textSize="@dimen/dp_16"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/register_enter_btn"
        android:layout_width="@dimen/dp_305"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@id/register_area_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_53"
        android:text="完成"
        android:textSize="@dimen/dp_17"
        android:textColor="#FFFFFF"
        android:background="@drawable/shape_login_btn"/>
    
</RelativeLayout>
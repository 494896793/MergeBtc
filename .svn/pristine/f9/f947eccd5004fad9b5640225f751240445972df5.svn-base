<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F2F2F2"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/mine_settings_two_line_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="设置支付密码"
        app:top_background="#FFFFFF"
        app:top_hasBackBtn="true"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="@dimen/dp_44">
        <EditText
            android:id="@+id/mine_settings_two_line_input_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:singleLine="true"
            android:textColor="#666666"
            android:inputType="numberPassword"
            android:layout_centerVertical="true"
            android:hint="请输入支付密码"
            android:maxLength="6"
            android:textSize="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F2F2F2"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_15"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="@dimen/dp_44"
        android:gravity="center_vertical">
        <EditText
            android:id="@+id/mine_settings_two_line_input_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:singleLine="true"
            android:textColor="#666666"
            android:inputType="numberPassword"
            android:hint="请确认支付密码"
            android:maxLength="6"
            android:textSize="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_10"
            />
    </LinearLayout>
    
    <Button
        android:id="@+id/mine_settings_two_line_enter_btn"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/shape_red_5dp"
        android:textSize="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_60"
        android:text="确认"
        android:textColor="#FFFFFF"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="@dimen/dp_2"
        app:cardCornerRadius="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        >
        <LinearLayout
            android:id="@+id/mine_wallet_property_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"

            android:background="#FFFFFF"
            android:elevation="@dimen/dp_2"
            android:orientation="vertical"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_125"
                android:background="@mipmap/wallet_banner_bg">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_14"
                    android:text="￥"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:layout_alignBottom="@id/mine_wallet_property_amount"
                    android:layout_toLeftOf="@id/mine_wallet_property_amount"/>
                <TextView
                    android:id="@+id/mine_wallet_property_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="0.0"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_35"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/dp_27" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_toRightOf="@+id/iv_money"
                    android:text="可用余额"
                    android:textColor="#ffffffff"
                    android:alpha="0.5"
                    android:layout_below="@id/mine_wallet_property_amount"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/dp_11"


                    />
            </RelativeLayout>



            <LinearLayout
                android:background="@drawable/shape_small_change"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:orientation="horizontal">

                <LinearLayout

                    android:id="@+id/recharge_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@mipmap/wallet_money_recharge"
                        android:layout_marginLeft="@dimen/dp_57"
                        android:layout_marginRight="@dimen/dp_9"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#222222"
                        android:textSize="@dimen/dp_14"
                        android:text="充值"/>

                </LinearLayout>
                <View

                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_29"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="#F7F7F7"/>
                <LinearLayout
                    android:id="@+id/crash_out_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <ImageView

                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:src="@mipmap/wallet_money_cash"
                        android:layout_marginLeft="@dimen/dp_57"
                        android:layout_marginRight="@dimen/dp_9"
                        />
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#222222"
                        android:textSize="@dimen/dp_14"
                        android:text="提现"/>

                </LinearLayout>


            </LinearLayout>





            <!--  <TextView
                  android:layout_alignParentBottom="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/dp_46"

                  android:layout_toRightOf="@id/mine_wallet_property_amount"
                  android:text="元"
                  android:textColor="#ffffffff"
                  android:textSize="@dimen/dp_18" />-->
        </LinearLayout>

    </android.support.v7.widget.CardView>







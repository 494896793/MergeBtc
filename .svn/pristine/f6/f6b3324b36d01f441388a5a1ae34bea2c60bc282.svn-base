<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <com.bochat.app.app.view.BoChatTopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_hasBackBtn="true"
        app:top_background="#FFFFFF"
        app:top_titleText="记录详情"/>
    
    <ImageView
        android:id="@+id/mine_bill_detail_icon"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        android:layout_marginTop="@dimen/dp_20"
        />
    
    <TextView
        android:id="@+id/mine_bill_detail_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_28"
        android:textColor="#0084FF"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_30"
        android:background="#F7F7F7"/>
    
    <ListView
        android:id="@+id/mine_bill_detail_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        />
    
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/list_app_top_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_20">

            <LinearLayout
                android:id="@+id/list_app_back_menu"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/ic_top_bar_back" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/list_app_search_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_34"
                android:layout_centerInParent="true"
                android:layout_toStartOf="@id/list_app_scan_layout"
                android:layout_toEndOf="@id/list_app_back_menu"
                android:background="@drawable/shape_search"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bochat_search_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_bochat_search"
                    android:drawablePadding="@dimen/dp_6"
                    android:paddingStart="@dimen/dp_18"
                    android:text="@string/listapp_search_str"
                    android:textAlignment="center"
                    android:textColor="@color/colorFontColorForDark"
                    android:textSize="@dimen/dp_14" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/list_app_scan_layout"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_19"
                    android:src="@mipmap/ic_home_more_scan" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:fillViewport="true"
        android:fadingEdge="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_app_top_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_15"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/list_app_activity"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/dp_31"
                android:layout_marginBottom="@dimen/dp_26"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                 />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list_app_bottom_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
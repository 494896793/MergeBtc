<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:background="#f2f2f2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/cv_group_detail_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_170"
                android:background="@mipmap/bg_cv_group_detail_banner">

                <com.bochat.app.app.view.BoChatTopBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:top_hasBackBtn="true"
                    app:top_background="#00000000"
                    app:top_backBtnBackground="@mipmap/ic_arrow_left_white"
                    app:top_titleText=""/>

                <TextView
                    android:id="@+id/cv_group_detail_name"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_18"
                    android:textColor="#FFFFFF"
                    android:singleLine="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    />
                <ImageView
                    android:id="@+id/cv_group_detail_qr_code"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:padding="@dimen/dp_15"
                    android:src="@mipmap/ic_cv_group_detail_code"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:focusable="true"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="#FFFFFF"
                android:layout_marginTop="@dimen/dp_10">
                <TextView
                    android:id="@+id/cv_group_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text=""
                    android:textSize="@dimen/dp_14"
                    android:textColor="#999999"
                    android:layout_marginLeft="@dimen/dp_15"
                    />
                <TextView
                    android:id="@+id/cv_group_detail_description"
                    android:layout_width="@dimen/dp_335"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_below="@id/cv_group_detail_date"
                    android:layout_marginTop="@dimen/dp_11"
                    android:layout_marginBottom="@dimen/dp_11"
                    android:textSize="@dimen/dp_14"
                    android:textColor="#666666"
                    android:text="群介绍"/>
            </RelativeLayout>

            <com.bochat.app.app.view.BoChatItemView
                android:id="@+id/cv_group_detail_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/dp_10"
                app:item_content=""
                app:item_hasRightBtn="false"
                app:item_text="群ID"/>
            <com.bochat.app.app.view.BoChatItemView
                android:id="@+id/cv_group_detail_member"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                app:item_text="群成员"
                app:item_content=""
                />
            <com.bochat.app.app.view.BoChatItemView
                android:id="@+id/cv_group_detail_add_member"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:visibility="gone"
                app:item_text="邀请好友入群"/>
            
            <com.bochat.app.app.view.BoChatItemView
                android:visibility="gone"
                android:id="@+id/cv_group_detail_manager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_10"
                app:item_text="群管理"
                app:item_content=""
                />
            <com.bochat.app.app.view.BoChatItemView
                android:visibility="gone"
                android:id="@+id/cv_group_detail_history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                app:item_text="查找聊天记录"/>
            <com.bochat.app.app.view.BoChatItemView
                android:visibility="gone"
                android:id="@+id/cv_group_detail_clear_history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                app:item_text="清除聊天记录"/>
            <com.bochat.app.app.view.BoChatItemView
                android:visibility="gone"
                android:id="@+id/cv_group_detail_notification"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                app:item_hasRightBtn="false"
                app:item_hasSwitchBtn="true"
                app:item_text="消息免打扰"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/cv_group_detail_enter_btn"
                    android:layout_width="@dimen/dp_345"
                    android:layout_height="@dimen/dp_44"
                    android:background="@drawable/shape_red_5dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_marginBottom="@dimen/dp_20"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
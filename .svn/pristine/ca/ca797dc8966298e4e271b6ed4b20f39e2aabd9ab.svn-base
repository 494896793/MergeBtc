<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.bochat.app.app.view.SpImageView
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:id="@+id/head_img"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60" />
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/head_img"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:maxEms="12"
                android:id="@+id/userName"
                android:layout_marginBottom="@dimen/dp_3"
                android:textSize="@dimen/sp_16"
                android:text=""
                android:textColor="@color/color_181818"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:maxEms="15"
                android:layout_marginBottom="@dimen/dp_3"
                android:id="@+id/content"
                android:textColor="@color/letter_text"
                android:text=""
                android:textSize="@dimen/sp_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/infoFrom"
                android:textSize="@dimen/sp_13"
                android:text="来源：账号查找"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/read_tx"
            android:background="@drawable/apply_enable"
            android:text="查看"
            android:textColor="#4591EC"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30" />
    </RelativeLayout>

</LinearLayout>
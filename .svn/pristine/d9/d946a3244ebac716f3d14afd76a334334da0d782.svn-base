<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <com.bochat.app.app.view.BoChatTopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F2F2F2"
        app:top_hasBackBtn="true"
        app:top_titleText="零钱充值"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_mine_select_pay_bg"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="vertical">
        
        <RelativeLayout
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical">
            
            <TextView
                android:layout_width="@dimen/dp_96"
                android:layout_height="@dimen/dp_22"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="选择支付方式"
                android:textColor="#ff181818"
                android:textSize="@dimen/dp_16"/>

            <RelativeLayout
                android:id="@+id/mine_property_recharge_pay_type_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/mine_property_recharge_pay_icon"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/mine_property_recharge_pay_name"
                    android:src="@mipmap/ic_alipay"/>

                <TextView
                    android:id="@+id/mine_property_recharge_pay_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_toLeftOf="@+id/mine_property_recharge_pay_arrow"
                    android:text="支付宝"
                    android:textColor="#181818"
                    android:textSize="@dimen/dp_16"/>

                <ImageView
                    android:id="@+id/mine_property_recharge_pay_arrow"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@mipmap/ic_arrow_right_gray24"/>
            </RelativeLayout>
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/mine_property_recharge_alipay"
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_50"
            android:visibility="gone"
            android:background="#FFFFFF"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/ic_alipay"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_49"
                android:text="支付宝"
                android:textColor="#181818"
                android:textSize="@dimen/dp_16"/>
        </RelativeLayout>

        <View
            android:id="@+id/mine_property_recharge_pay_div"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F2F2F2"
            android:layout_marginLeft="@dimen/dp_15"
            />
        
        <RelativeLayout
            android:id="@+id/mine_property_recharge_wechat_pay"
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/shape_mine_wechat_bg"
            android:visibility="gone"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/ic_wechat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_49"
                android:text="微信"
                android:textColor="#181818"
                android:textSize="@dimen/dp_16"/>
        </RelativeLayout>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_160"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/shape_mine_recharge_amount_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_18"
            android:text="充值金额"
            android:textColor="#ff999999"
            android:textSize="@dimen/dp_16"/>
        
        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_42"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_85"
            android:text="￥"
            android:textColor="#181818"
            android:textSize="@dimen/dp_30"/>
        
        <EditText
            android:id="@+id/mine_property_recharge_amount_input"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_42"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_85"
            android:layout_toRightOf="@+id/tv_unit"
            android:textColor="#181818"
            android:maxLength="15"
            android:hint="0.00"
            android:background="@null"
            android:inputType="numberDecimal"
            android:textSize="@dimen/dp_30"/>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/tv_unit"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:background="#DFDFDF"/>
    </RelativeLayout>

    <Button
        android:id="@+id/mine_property_recharge_enter_btn"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_110"
        android:background="@drawable/shape_button_5dp"
        android:text="充值"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dp_17"/>

</LinearLayout>
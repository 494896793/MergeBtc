<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/view_select_dialog_top_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:layout_above="@id/view_select_dialog_title"/>
            <TextView
                android:id="@+id/view_select_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="#F2F2F2"
                android:text="资产类型"
                android:textSize="@dimen/dp_16"
                android:textColor="#181818"
                android:layout_above="@id/view_select_dialog_grid_view"
                android:gravity="center"/>
            <GridView
                android:id="@+id/view_select_dialog_grid_view"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:padding="@dimen/dp_10"
                android:layout_alignParentBottom="true"
                android:numColumns="3"
                android:layout_height="wrap_content">
            </GridView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
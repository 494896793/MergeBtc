<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/cv_group_detail_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_170"
                android:background="@mipmap/bg_cv_group_detail_banner">

                <com.bochat.app.app.view.BoChatTopBar
                    android:id="@+id/cv_group_top_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:top_backBtnBackground="@mipmap/ic_arrow_left_white"
                    app:top_background="#00000000"
                    app:top_hasBackBtn="true"
                    app:top_titleColor="@color/white"
                    app:top_titleText="群聊设置" />

                <RelativeLayout
                    android:id="@+id/cv_group_descriptions"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.bochat.app.app.view.SpImageView
                        android:id="@+id/group_head_img"
                        android:layout_width="@dimen/dp_60"
                        android:layout_height="@dimen/dp_60"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_16"
                        tools:background="@mipmap/ic_launcher" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_16"
                        android:layout_toEndOf="@id/group_head_img"
                        android:layout_toStartOf="@id/cv_group_detail_qr_code"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/cv_group_detail_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/dp_18"
                            tools:text="名称" />
                        <TextView
                            android:id="@+id/cv_group_detail_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dp_12"
                            android:textColor="#999999"
                            android:maxLines="2"
                            tools:text="群介绍"/>
                        <TextView
                            android:id="@+id/cv_group_detail_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dp_12"
                            android:textColor="#999999"
                            tools:text="日期" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/cv_group_detail_qr_code"
                        android:layout_width="@dimen/dp_27"
                        android:layout_height="@dimen/dp_27"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_margin="@dimen/dp_15"
                        android:src="@mipmap/my_qrcode" />
                </RelativeLayout>
            </RelativeLayout>

            <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginBottom="@dimen/dp_5"-->
            <!--android:background="#FFFFFF"-->
            <!--android:layout_marginTop="@dimen/dp_10">-->
            <!--<TextView-->
            <!--android:id="@+id/cv_group_detail_date"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="@dimen/dp_10"-->
            <!--android:text=""-->
            <!--android:textSize="@dimen/dp_14"-->
            <!--android:textColor="#999999"-->
            <!--android:layout_marginLeft="@dimen/dp_15"-->
            <!--/>-->
            <!--<TextView-->
            <!--android:id="@+id/cv_group_detail_description"-->
            <!--android:layout_width="@dimen/dp_335"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="@dimen/dp_15"-->
            <!--android:layout_below="@id/cv_group_detail_date"-->
            <!--android:layout_marginTop="@dimen/dp_11"-->
            <!--android:layout_marginBottom="@dimen/dp_11"-->
            <!--android:textSize="@dimen/dp_14"-->
            <!--android:textColor="#666666"-->
            <!--android:text="群介绍"/>-->
            <!--</RelativeLayout>-->

            <com.bochat.app.app.view.BoChatItemView
                android:id="@+id/cv_group_detail_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/dp_20"
                app:item_content=""
                app:item_hasRightBtn="false"
                app:item_text="群聊ID" />

            <com.bochat.app.app.view.BoChatItemView
                android:id="@+id/cv_group_detail_member"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                app:item_content=""
                app:item_text="群聊成员" />

            <com.bochat.app.app.view.BoChatItemView
                android:id="@+id/cv_group_detail_add_member"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:visibility="gone"
                app:item_text="邀请进群" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#FBFAFA"
                />
            
            <com.bochat.app.app.view.BoChatItemView
                android:id="@+id/cv_group_detail_history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:visibility="gone"
                app:item_text="聊天记录" />
            
            <com.bochat.app.app.view.BoChatItemView
                android:id="@+id/cv_group_detail_notification"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:visibility="gone"
                app:item_hasRightBtn="false"
                app:item_hasSwitchBtn="true"
                app:item_text="消息免打扰" />
            
            <com.bochat.app.app.view.BoChatItemView
                android:id="@+id/cv_group_detail_conversation_top_switch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:visibility="gone"
                app:item_hasRightBtn="false"
                app:item_hasSwitchBtn="true"
                app:item_text="聊天置顶" />
            
            <com.bochat.app.app.view.BoChatItemView
                android:id="@+id/cv_group_detail_manager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:visibility="gone"
                app:item_content=""
                app:item_text="群聊管理" />
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/cv_group_detail_enter_btn"
                    android:layout_width="@dimen/dp_345"
                    android:layout_height="@dimen/dp_44"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="@drawable/shape_button_5dp"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/dp_17" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
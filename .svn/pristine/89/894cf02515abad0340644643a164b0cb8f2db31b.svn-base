<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_3"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_9">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:id="@+id/viewpager_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/viewpager"
            android:layout_marginBottom="@dimen/dp_10"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/notice_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_63"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_15"
        android:paddingTop="@dimen/dp_9"
        android:paddingEnd="@dimen/dp_15">

        <ImageView
            android:id="@+id/notice_image"
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_32"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/dynamic_icon_notice"
             />
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_33"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@+id/notice_image"

            android:background="#F2F2F2" />

        <TextView
            android:id="@+id/new_flash_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@+id/notice_image"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="15"
            android:text="g"
            android:textColor="#222222"
            android:layout_marginLeft="@dimen/dp_21"
            android:textSize="@dimen/dp_12" />



        <TextView
            android:id="@+id/notice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/notice_image"
            android:layout_below="@id/new_flash_text"
            android:layout_marginTop="@dimen/dp_9"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="15"
            android:text="g"
            android:textColor="#222222"
            android:layout_marginLeft="@dimen/dp_21"
            android:textSize="@dimen/dp_12" />





    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#FBFAFA" />
</LinearLayout>
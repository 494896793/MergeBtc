<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/add_friend_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:top_titleText="添加朋友"
        app:top_hasBackBtn="true"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="@dimen/dp_14"
                android:textStyle="bold"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/color_181818"
                android:id="@+id/title_text"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_7"
                android:src="@mipmap/dynamic_line"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:paddingLeft="@dimen/dp_25"
                android:paddingRight="@dimen/dp_25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/source_text"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/letter_text"
                    android:text="来源：BoChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/time_text"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/letter_text"
                    android:text="来源：BoChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:text=""
                android:paddingLeft="@dimen/dp_25"
                android:paddingRight="@dimen/dp_25"
                android:id="@+id/content_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="@dimen/dp_375"
        android:layout_height="@dimen/dp_95"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/item_token_action"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_6"
            android:text="发送"
            android:textColor="#ff333333"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/item_token_date"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_15"
            android:text="1月31日 08:30"
            android:textColor="#ff999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_token_amount"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_below="@id/item_token_date"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_15"
            android:text="-0.000004BTC"
            android:textColor="#333333"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/item_token_address"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_29"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_3"
            android:text=""
            android:textColor="#999999"
            android:textSize="@dimen/dp_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</RelativeLayout>
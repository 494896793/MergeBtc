<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/qr_card_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_hasExt2Btn="true"
        app:top_hasBackBtn="true"
        app:top_extButton2Src="@mipmap/ic_share"/>
    
    <RelativeLayout
        android:id="@+id/qr_card_layout"
        android:layout_marginTop="@dimen/dp_42"
        android:layout_width="@dimen/dp_315"
        android:layout_height="@dimen/dp_356"
        android:layout_below="@id/qr_card_top_bar"
        android:background="@drawable/shape_qr_card_code"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/qr_card_top_title"
            android:layout_width="@dimen/dp_315"
            android:layout_height="@dimen/dp_44"

            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_blue_top_5dp"
            android:text="专属推广二维码"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp_18"/>
        
        <ImageView
            android:layout_below="@id/qr_card_top_title"
            android:id="@+id/qr_card_icon"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"/>
        <TextView
            android:layout_below="@id/qr_card_top_title"
            android:id="@+id/qr_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/default_text"
            android:text=""
            android:layout_marginTop="@dimen/dp_29"
            android:layout_toRightOf="@id/qr_card_icon"
            android:layout_marginLeft="@dimen/dp_20"
            />
        <ImageView
            android:id="@+id/qr_card_code"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_200"
            android:layout_below="@id/qr_card_icon"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/qr_card_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:textColor="#181818"
            android:layout_marginBottom="@dimen/dp_7"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/qr_card_tips_2"
            android:text="@string/mine_invite"/>
        <TextView
            android:id="@+id/qr_card_tips_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:textColor="#999999"
            android:layout_alignParentBottom="true"    
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_centerHorizontal="true"
            android:text="可截图保存发送给好友"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/qr_card_invite_layout"
        android:layout_width="@dimen/dp_315"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qr_card_layout"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="@dimen/dp_22"
        android:background="@drawable/shape_white_5dp">
        <TextView
            android:id="@+id/qr_card_invite_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="邀请链接 [点击复制]"
            android:textColor="#4F5A7B"
            android:textSize="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_10"/>
        <TextView
            android:id="@+id/qr_card_invite_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#4F5A7B"
            android:textSize="@dimen/dp_14"
            android:gravity="center_horizontal"
            android:layout_below="@id/qr_card_invite_title"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_10"
            />
    </RelativeLayout>
</RelativeLayout>
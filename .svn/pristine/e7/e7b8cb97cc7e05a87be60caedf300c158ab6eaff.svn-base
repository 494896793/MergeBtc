<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/add_friend_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="项目方认证"
        app:top_hasBackBtn="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/statu_img"
            android:layout_marginTop="@dimen/dp_34"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100" />
        <TextView
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@id/statu_img"
            android:id="@+id/statu_text"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_14"
            android:text="@string/identification_doing"
            android:textColor="@color/color_999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:paddingLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_56"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_14"
            android:text="企业名称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/company_name"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="某某某网络科技有限公司"
            android:textSize="@dimen/sp_14"
            android:textColor="#222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="#F7F7F7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>

    <LinearLayout
        android:paddingLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_14"
            android:text="官网地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/company_address"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="某某某网络科技有限公司"
            android:textSize="@dimen/sp_14"
            android:textColor="#222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="#F7F7F7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>



    <LinearLayout
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/logo_text"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_14"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="项目LOGO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_below="@id/logo_text"
                android:id="@+id/logo_img"
                android:src="@mipmap/dynamic_project_upload"
                android:layout_width="@dimen/dp_84"
                android:layout_height="@dimen/dp_84" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/identification_text"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_14"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="营业执照"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_below="@id/identification_text"
                android:id="@+id/license_img"
                android:src="@mipmap/dynamic_project_upload"
                android:layout_width="@dimen/dp_84"
                android:layout_height="@dimen/dp_84" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
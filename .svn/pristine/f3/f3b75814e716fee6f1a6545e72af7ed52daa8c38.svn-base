<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_default">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_64"
        android:scaleType="fitXY"
        android:src="@mipmap/logo_no_title" />

    <TextView
        android:layout_marginLeft="@dimen/dp_29"
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_logo"
        android:layout_marginTop="@dimen/dp_41"
        android:text="Glad to see you !"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/dp_27"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/phone_relative"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text"
        android:layout_marginLeft="@dimen/dp_29"
        android:layout_marginTop="@dimen/dp_84">

        <RelativeLayout
            android:id="@+id/phone_head_relative"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30">

            <TextView
                android:id="@+id/phone_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/dp_18" />

            <View
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:background="@color/border_color" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/phone_head_icon"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/phone_head_relative"
            android:src="@mipmap/home_drop_down" />

        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/phone_head_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/phone_number_input"
                android:layout_width="@dimen/dp_200"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:textSize="@dimen/dp_14" />
            <View
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/phone_view_line"
                android:layout_below="@id/phone_number_input"
                android:background="@color/border_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>
        </RelativeLayout>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/pwd_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_relative"
        android:layout_marginLeft="@dimen/dp_29"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_30">

        <EditText
            android:id="@+id/verify_code_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入手机验证码"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:textSize="@dimen/dp_14" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入登录密码"
            android:inputType="textPassword"
            android:maxLength="15"
            android:maxLines="1"
            android:textSize="@dimen/dp_14"
            android:visibility="invisible" />

        <Button
            android:id="@+id/get_verify_code_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentRight="true"
            android:background="@drawable/login_code_bt"
            android:text="获取验证码"
            android:textAllCaps="false"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/dp_12" />
    </RelativeLayout>

    <View
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_29"
        android:id="@+id/pwd_view_line"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/pwd_relative"
        android:background="@color/border_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>

    <Button
        android:layout_below="@id/pwd_view_line"
        android:id="@+id/login_enter_btn"
        android:layout_width="@dimen/dp_305"
        android:layout_height="@dimen/dp_44"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_47"
        android:background="@drawable/shape_login_btn"
        android:text="登录"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dp_17" />







    <TextView
        android:visibility="gone"
        android:id="@+id/forget_password_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_enter_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_19"
        android:background="@null"
        android:text="忘记密码"
        android:textColor="@color/letter_text"
        android:textSize="@dimen/dp_14"
        />

    <LinearLayout
        android:id="@+id/login_linear"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_enter_btn"
        android:gravity="center"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/login_phone_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/dp_19"
            >

            <TextView
                android:textStyle="bold"
                android:id="@+id/login_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="快捷登录"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/dp_17" />

            <TextView
                android:id="@+id/login_phone_tag"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_3"
                android:layout_below="@id/login_phone"
                android:layout_marginLeft="@dimen/dp_96"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/shape_login_tag"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:layout_width="@dimen/dp_2"
            android:layout_height="@dimen/dp_17"
            android:background="@color/lightGray" />

        <RelativeLayout
            android:id="@+id/login_password_btn"
            android:layout_width="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_vertical|left"
            android:paddingLeft="@dimen/dp_19"
            android:layout_height="@dimen/dp_40">

            <TextView
                android:id="@+id/login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_83"
                android:background="@null"
                android:text="密码登录"
                android:textColor="@color/letter_text"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/login_password_tag"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_3"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_96"
                android:background="@drawable/shape_login_tag"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/login_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_linear"
        android:layout_centerHorizontal="true"
        android:text="还没注册也能获取验证码登录哦"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_12" />

</RelativeLayout>
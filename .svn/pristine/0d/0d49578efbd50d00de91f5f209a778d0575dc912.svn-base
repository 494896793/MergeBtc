<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bank_item_background"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_140"
    android:background="@mipmap/wallet_card_blue"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_centerInParent="true">

    <RelativeLayout
        android:id="@+id/rl_bank_item_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_23"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/item_bank_imag"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            />


        <TextView
            android:id="@+id/item_bank_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_toRightOf="@id/item_bank_imag"
            android:text="中国银行"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp_14" />

        <!--设置字体style-->
        <TextView
            android:id="@+id/item_bank_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@id/item_bank_card_name"
            android:text="储蓄卡"
            android:textColor=" #FFFFFF "
            android:alpha="0.5"
            android:textSize="@dimen/dp_12" />




    </RelativeLayout>





    <TextView
        android:id="@+id/item_bank_card_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dp_20"
        android:text="**** **** **** 3761"
        android:layout_alignLeft="@id/rl_bank_item_1"
        android:layout_below="@id/rl_bank_item_1"
        android:layout_marginTop="@dimen/dp_38"
        />

    <ImageView
        android:id="@+id/item_bank_card_delete"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@mipmap/ic_white_delete"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_18"
        />



</RelativeLayout>
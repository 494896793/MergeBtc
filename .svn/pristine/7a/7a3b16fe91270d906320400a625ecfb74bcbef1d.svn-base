<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <RelativeLayout
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_marginBottom="@dimen/dp_17"
       android:layout_height="wrap_content">
       <TextView
           android:id="@+id/time_text"
           android:layout_marginLeft="@dimen/dp_15"
           android:text="12:30:30"
           android:textColor="@color/color_999999"
           android:textSize="@dimen/dp_12"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <TextView
           android:id="@+id/buy_or_sale_text"
           android:layout_toRightOf="@id/time_text"
           android:layout_marginLeft="@dimen/dp_34"
           android:text="卖"
           android:textSize="@dimen/dp_14"
           android:textColor="#4FCC7A"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <TextView
           android:id="@+id/price_text"
           android:layout_toRightOf="@id/buy_or_sale_text"
           android:layout_marginLeft="@dimen/dp_39"
           android:text="0.00024658"
           android:textSize="@dimen/dp_14"
           android:textColor="#4FCC7A"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <TextView
           android:layout_marginRight="@dimen/dp_15"
           android:id="@+id/num_text"
           android:layout_alignParentRight="true"
           android:text="0.12345678"
           android:textSize="@dimen/dp_14"
           android:textColor="@color/color_222222"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
   </RelativeLayout>
</LinearLayout>
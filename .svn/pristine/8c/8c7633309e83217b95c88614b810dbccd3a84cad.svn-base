<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/list_app_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:top_titleText=""
        app:top_hasBackBtn="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@mipmap/redpacketdetail_list_bg"
                android:layout_height="@dimen/dp_275">
                <RelativeLayout
                    android:id="@+id/info_relative"
                    android:layout_marginTop="@dimen/dp_50"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/head_img"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/title_text"
                        android:layout_toRightOf="@+id/head_img"
                        android:text="艾米的红包"
                        android:textSize="@dimen/sp_14"
                        android:textColor="#FAE7B3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <TextView
                    android:layout_marginTop="@dimen/dp_70"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/notice_text"
                    android:layout_below="@+id/info_relative"
                    android:textColor="#FAE7B3"
                    android:textSize="@dimen/sp_17"
                    android:text="恭喜发财，大吉大利"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/value_person"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/notice_text"
                    android:textColor="#FFE71F"
                    android:textSize="@dimen/sp_30"
                    android:text="0.00015ETH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="#DFDFDF"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"/>

            <TextView
                android:id="@+id/receive_notice_text"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="已领取1/1个，剩余0个"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="@dimen/dp_15"
                android:background="#DFDFDF"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
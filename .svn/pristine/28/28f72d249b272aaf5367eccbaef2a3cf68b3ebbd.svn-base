<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
             android:background="#F2F2F2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_103"
                android:background="#333333">
                <com.bochat.app.app.view.BoChatTopBar
                    android:id="@+id/mine_quick_exchange_top_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:top_hasBackBtn="true"
                    app:top_backBtnBackground="@mipmap/ic_arrow_left_white"
                    app:top_titleText="闪兑"
                    app:top_titleColor="#FFFFFF"
                    app:top_hasExt2Btn="true"
                    app:top_extButton2Src="@mipmap/ic_mine_order"
                    android:background="#00000000"
                    />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/mine_quick_exchange_layout"
                android:layout_width="@dimen/dp_345"
                android:layout_height="@dimen/dp_336"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_76"
                android:background="@drawable/shape_mine_chang_hall_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_22"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dp_73"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="支付"
                    android:textColor="#181818"
                    android:textSize="@dimen/dp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_22"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_74"
                    android:text="兑换"
                    android:textColor="#181818"
                    android:textSize="@dimen/dp_16" />
                
                <RelativeLayout
                    android:layout_width="@dimen/dp_158"
                    android:layout_height="@dimen/dp_36"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_47"
                    android:background="@drawable/shape_white_5dp">
                    <Spinner
                        android:id="@+id/mine_quick_exchange_pay_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@null">
                    </Spinner>
                    <ImageView
                        android:id="@+id/mine_quick_exchange_pay_type_btn"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_7"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_arrow_down_gray24"
                        />
                </RelativeLayout>
                
                <RelativeLayout
                    android:layout_width="@dimen/dp_158"
                    android:layout_height="@dimen/dp_36"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_47"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/shape_white_5dp">
                    <Spinner
                        android:id="@+id/mine_quick_exchange_exchange_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dp_5"
                        android:background="@null">
                    </Spinner>
                    <ImageView
                        android:id="@+id/mine_quick_exchange_exchange_type_btn"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_7"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_arrow_down_gray24"
                        />
                </RelativeLayout>


                <ImageView
                    android:id="@+id/mine_quick_exchange_change_btn"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:padding="@dimen/dp_2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_88"
                    android:src="@mipmap/ic_mine_transition" />

                
                <RelativeLayout
                    android:layout_width="@dimen/dp_158"
                    android:layout_height="@dimen/dp_36"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_108"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@drawable/shape_white_5dp">
                    <EditText
                        android:id="@+id/mine_quick_exchange_exchange_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:textSize="@dimen/dp_15"
                        android:maxLength="15"
                        android:textColor="#181818"
                        android:inputType="numberDecimal"
                        android:hint="0.000000"
                        android:layout_marginLeft="@dimen/dp_10"/>
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_7"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_arrow_down_gray24"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/dp_158"
                    android:layout_height="@dimen/dp_36"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_108"
                    android:background="@drawable/shape_white_5dp">
                    <EditText
                        android:id="@+id/mine_quick_exchange_pay_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:maxLength="15"
                        android:background="@null"
                        android:textSize="@dimen/dp_15"
                        android:textColor="#181818"
                        android:hint="0.000000"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        android:layout_marginLeft="@dimen/dp_10"/>
                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_7"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_arrow_down_gray24"
                        />

                </RelativeLayout>

                <Button
                    android:id="@+id/mine_quick_exchange_enter_btn"
                    android:layout_width="@dimen/dp_266"
                    android:layout_height="@dimen/dp_44"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_48"
                    android:layout_marginTop="@dimen/dp_190"
                    android:layout_marginRight="@dimen/dp_48"
                    android:background="@drawable/shape_login_btn"
                    android:text="发起闪兑"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/dp_17" />

                <ImageView
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_15"
                    android:layout_below="@+id/mine_quick_exchange_enter_btn"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_13"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@mipmap/ic_mine_chk_none" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_below="@+id/mine_quick_exchange_enter_btn"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toRightOf="@+id/checkBox"
                    android:text="将订单分享到闪兑大厅，促成更快交易"
                    android:textColor="#666666"
                    android:textSize="@dimen/dp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_18"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:text="发起闪兑后24小时未完成的交易将会退回钱包"
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_13" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_351"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_24"
                android:layout_marginBottom="@dimen/dp_26"
                android:layout_below="@id/mine_quick_exchange_layout"
                android:background="@drawable/shape_white_corner_10"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="闪兑说明"/>
                <TextView
                    android:layout_width="@dimen/dp_315"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="闪兑是BoChat根据用户双方自主意愿发起的资产交换功能，目前平台仅对部分资产开放闪兑功能；"/>
                <TextView
                    android:layout_width="@dimen/dp_315"
                    android:layout_height="wrap_content"
                    android:textColor="#4F5A7B"
                    android:textSize="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="服务费"/>
                <TextView
                    android:layout_width="@dimen/dp_315"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="@dimen/dp_14"
                    android:text="闪兑成功后，平台会收取用户获得资产的0.2%作为服务费；"/>
                <TextView
                    android:layout_width="@dimen/dp_315"
                    android:layout_height="wrap_content"
                    android:textColor="#4F5A7B"
                    android:textSize="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="兑换价"/>
                <TextView
                    android:layout_width="@dimen/dp_315"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:textSize="@dimen/dp_14"
                    android:text="闪兑价依据兑换用户双方的心理价位为基准由兑换双方自主定价；"/>
                <TextView
                    android:layout_width="@dimen/dp_315"
                    android:layout_height="wrap_content"
                    android:textColor="#4F5A7B"
                    android:textSize="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="兑换规则"/>
                <TextView
                    android:layout_width="@dimen/dp_315"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:textColor="#666666"
                    android:textSize="@dimen/dp_14"
                    android:text="① 选择好友或群发起闪兑； 可选择分享至闪兑大厅； \n② 接收方同意支付，闪兑成功； \n③ 接收方不同意支付，发起方可以主动撤销或24h后闪兑失效； \n④ 资产退还至余额中。"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
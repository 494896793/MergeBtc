<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/add_friend_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="项目方认证"
        app:top_hasBackBtn="true"/>

    <LinearLayout
        android:paddingLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_43"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_14"
            android:text="机构名称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginRight="@dimen/dp_15"
            android:maxLines="1"
            android:id="@+id/company_name"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dp_20"
            android:hint="请输入机构完整名称"
            android:textSize="@dimen/sp_14"
            android:textColor="#222222"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="#F7F7F7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>

    <LinearLayout
        android:paddingLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_14"
            android:text="官网地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginRight="@dimen/dp_15"
            android:maxLines="1"
            android:id="@+id/company_address"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dp_20"
            android:text=""
            android:hint="请输入机构官网地址"
            android:textSize="@dimen/sp_14"
            android:textColor="#222222"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="#F7F7F7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>

    <TextView
        android:paddingLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_40"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_14"
        android:text="上传资料"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_84">
            <ImageView
                android:id="@+id/logo_img"
                android:src="@mipmap/dynamic_project_upload"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/logo_notice"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_11"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="项目LOGO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_84">
            <ImageView
                android:id="@+id/license_img"
                android:src="@mipmap/dynamic_project_upload"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/lisence_notice"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/sp_11"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="机构证明"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/identifi_text"
        android:layout_marginTop="@dimen/dp_55"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:text="申请认证"
        android:textSize="@dimen/sp_16"
        android:textColor="#FEFEFE"
        android:gravity="center"
        android:background="@drawable/dark_radiu_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44" />

    <LinearLayout
        android:layout_marginTop="@dimen/dp_19"
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_13"
            android:text="我已阅读并同意"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/reading_text"
            android:textColor="#222222"
            android:textSize="@dimen/sp_13"
            android:text="《项目合作协议书》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
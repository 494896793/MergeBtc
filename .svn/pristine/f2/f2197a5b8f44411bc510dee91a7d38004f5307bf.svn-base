<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7F000000">
        <RelativeLayout
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_205"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_white_corner_10"
            >
            <TextView
                android:id="@+id/message_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#181818"
                android:text="解除绑定"
                android:textSize="@dimen/dp_17"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_centerHorizontal="true"/>

            <View
                android:id="@+id/message_dialog_div"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@id/message_dialog_title"
                android:background="#DFDFDF"
                android:layout_marginTop="@dimen/dp_10"/>

            <ImageView
                android:layout_below="@id/message_dialog_div"
                android:id="@+id/message_dialog_icon"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_48"
                android:src="@mipmap/ic_red_tips"/>

            <TextView
                android:layout_below="@id/message_dialog_div"
                android:id="@+id/message_dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#181818"
                android:text="是否删除该支付方式？"
                android:textSize="@dimen/dp_17"
                android:minWidth="@dimen/dp_150"
                android:maxWidth="@dimen/dp_200"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@id/message_dialog_icon"/>

            <View
                android:id="@+id/message_dialog_div2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_above="@id/message_dialog_button"
                android:background="#DFDFDF"/>
            <LinearLayout
                android:id="@+id/message_dialog_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_54"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/message_dialog_cancel_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/dp_17"
                    android:textColor="#181818"
                    android:background="@drawable/shape_gray_left_bottom_5dp"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:focusable="true"
                    android:clickable="true"
                    android:text="取消"
                    />
                <TextView
                    android:gravity="center"
                    android:id="@+id/message_dialog_enter_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_white_right_bottom_5dp"
                    android:textSize="@dimen/dp_17"
                    android:textColor="#FE695E"
                    android:focusable="true"
                    android:clickable="true"
                    android:text="确定"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    android:background="@color/white"
    android:padding="@dimen/dp_15"
    android:clickable="false">

    <com.bochat.app.app.view.SpImageView
        android:id="@+id/recommend_group_icon"
        android:layout_width="@dimen/dp_43"
        android:layout_height="@dimen/dp_43"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/recommend_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_16"
        tools:text="群名称"
        android:layout_toStartOf="@id/recommend_group_people"
        android:drawableEnd="@mipmap/home_icon_group"
        android:drawablePadding="@dimen/dp_4"
        android:layout_toEndOf="@id/recommend_group_icon"
        android:layout_marginStart="@dimen/dp_10"/>
    <TextView
        android:id="@+id/recommend_group_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个性签名"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_13"
        android:layout_toStartOf="@id/recommend_group_people"
        android:layout_toEndOf="@id/recommend_group_icon"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_below="@id/recommend_group_name"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/recommend_group_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="@dimen/dp_43"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/dp_12"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />
</RelativeLayout>
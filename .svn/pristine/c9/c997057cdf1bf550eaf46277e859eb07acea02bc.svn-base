<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bochat.app.app.view.BoChatTopBar

        android:id="@+id/bochat_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="选择提及人员"
        app:top_extButton3Text="所有人"
        app:top_hasExt3Btn="true">

    </com.bochat.app.app.view.BoChatTopBar>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/bochat_topbar"
        android:id="@+id/select_mentione_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</RelativeLayout>
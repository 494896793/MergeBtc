<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/friend_detail_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText=""
        app:top_hasBackBtn="true"
        android:background="#00000000"
        app:top_hasExt3Btn="true"
        app:top_extButton3Text=""
        />
    
    <ImageView
        android:id="@+id/friend_detail_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_195"/>
    
    <com.bochat.app.app.view.SpImageView
        android:id="@+id/friend_detail_icon"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/friend_detail_top_bar"
        android:layout_marginTop="@dimen/dp_88"
        />
    
    <TextView
        android:id="@+id/friend_detail_icon_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_25"
        android:textSize="@dimen/dp_18"
        android:textColor="#181818"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/friend_detail_icon"
        android:layout_marginTop="@dimen/dp_14"
        />
    
    <LinearLayout
        android:id="@+id/friend_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/friend_detail_icon_name"
        android:layout_marginTop="@dimen/dp_44"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/ic_friend_detail_name"
                android:layout_marginLeft="@dimen/dp_15"/>
            <TextView
                android:id="@+id/friend_detail_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/default_text"
                android:layout_marginLeft="@dimen/dp_15"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/ic_friend_detail_info"
                android:layout_marginLeft="@dimen/dp_15"/>
            <TextView
                android:id="@+id/friend_detail_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/default_text"
                android:layout_marginLeft="@dimen/dp_15"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/friend_detail_info_signature"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_45"
            android:paddingTop="@dimen/dp_2"
            android:maxLines="2"
            />
        <RelativeLayout
            android:id="@+id/friend_detail_qr_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/ic_friend_detail_qr"
                android:layout_marginLeft="@dimen/dp_15"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/default_text"
                android:layout_marginLeft="@dimen/dp_45"
                android:text="二维码"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:background="@mipmap/ic_arrow_left_black"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/friend_detail_phone_layout"
            android:layout_width="match_parent"
            android:visibility="invisible"
            android:layout_height="@dimen/dp_44">
            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@mipmap/ic_friend_detail_phone"
                android:layout_marginLeft="@dimen/dp_15"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/friend_detail_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/default_text"
                android:layout_marginLeft="@dimen/dp_45"
                android:text="13456789455"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:background="@mipmap/ic_arrow_left_black"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_8"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
    </LinearLayout>
    
    <Button
        android:visibility="gone"
        android:id="@+id/friend_detail_enter_btn"
        android:layout_width="@dimen/dp_305"
        android:layout_height="@dimen/dp_45"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_30"
        android:text="发送消息"
        android:textSize="@dimen/dp_17"
        android:textColor="#FFFFFF"
        android:background="@drawable/shape_login_btn"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_default"
    >

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_131"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_64"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_login_logo"
        />

    <TextView
        android:id="@+id/login_phone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_22"
        android:layout_below="@id/login_logo"
        android:layout_marginLeft="@dimen/dp_83"
        android:layout_marginTop="@dimen/dp_30"
        android:text="快捷登录"
        android:textColor="@color/login_tag_focus"
        android:background="@null"
        android:textSize="@dimen/dp_16"/>

    <TextView
        android:id="@+id/login_phone_tag"
        android:layout_width="@dimen/dp_39"
        android:layout_height="@dimen/dp_3"
        android:layout_below="@id/login_phone"
        android:layout_marginLeft="@dimen/dp_96"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/shape_login_tag"/>

    <RelativeLayout
        android:id="@+id/login_phone_btn"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@id/login_logo"
        android:background="#00000000"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true">
        
        
        
    </RelativeLayout>

    <TextView
        android:id="@+id/login_password"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_22"
        android:layout_below="@id/login_logo"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_83"
        android:background="@null"
        android:text="密码登录"
        android:textColor="@color/login_tag_un_focus"
        android:textSize="@dimen/dp_16"/>

    <TextView
        android:id="@+id/login_password_tag"
        android:layout_width="@dimen/dp_39"
        android:layout_height="@dimen/dp_3"
        android:layout_below="@id/login_phone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_96"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/shape_login_tag"/>

    <RelativeLayout
        android:id="@+id/login_password_btn"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_55"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@id/login_logo"
        android:background="#00000000"
        android:clickable="true">
    </RelativeLayout>

    <ImageView
        android:id="@+id/ic_phone"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_24"
        android:layout_below="@id/login_phone"
        android:layout_marginTop="@dimen/dp_58"
        android:layout_marginLeft="@dimen/dp_35"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_login_phone"
        />

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_below="@id/login_phone"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/ic_phone"
        android:hint="请输入手机号"
        android:maxLength="11"
        android:inputType="phone"
        android:textSize="@dimen/dp_17"
        android:background="@null"
        android:maxLines="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_login_div"
        android:layout_below="@id/ic_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        />

    <ImageView
        android:id="@+id/ic_code"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_24"
        android:layout_below="@id/ic_phone"
        android:layout_marginTop="@dimen/dp_47"
        android:layout_marginLeft="@dimen/dp_35"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_login_verify_code"
        />

    <EditText
        android:id="@+id/verify_code_input"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_34"
        android:layout_below="@id/ic_phone"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/ic_code"
        android:hint="请输入手机验证码"
        android:textSize="@dimen/dp_17"
        android:maxLength="6"
        android:inputType="number"
        android:gravity="center_vertical"
        android:background="@null"
        android:maxLines="1"
        />
    
    <EditText
        android:id="@+id/password_input"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_34"
        android:layout_below="@id/ic_phone"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@id/ic_code"
        android:hint="请输入登录密码"
        android:textSize="@dimen/dp_17"
        android:maxLength="15"
        android:inputType="textPassword"
        android:gravity="center_vertical"
        android:background="@null"
        android:maxLines="1"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_login_div"
        android:layout_below="@id/ic_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        />

    <Button
        android:id="@+id/get_verify_code_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_22"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_47"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_below="@id/ic_phone"
        android:background="@null"
        android:text="获取验证码"
        android:textSize="@dimen/dp_16"
        android:textAllCaps="false"
        android:textColor="#4591EC"
        />

    <TextView
        android:id="@+id/get_verify_code_btn_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_51"
        android:layout_toLeftOf="@id/get_verify_code_btn"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_below="@id/ic_phone"
        android:background="@drawable/shape_login_verify_code_div"
        />

    <TextView
        android:id="@+id/login_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还没注册也能获取验证码登录噢"
        android:textSize="@dimen/dp_15"
        android:layout_below="@id/get_verify_code_btn"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_35"
        />

    <Button
        android:id="@+id/login_enter_btn"
        android:layout_width="@dimen/dp_305"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@id/login_tips"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_53"
        android:text="登录"
        android:textSize="@dimen/dp_17"
        android:textColor="#FFFFFF"
        android:background="@drawable/shape_login_btn"/>

    <Button
        android:id="@+id/forget_password_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_22"
        android:textColor="#4F5A7B"
        android:text="忘记密码"
        android:textSize="@dimen/dp_16"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_enter_btn"
        android:layout_marginTop="@dimen/dp_19"
        android:visibility="gone"
        android:background="@null"/>

</RelativeLayout>
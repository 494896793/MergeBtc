<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F2F2F2"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/mine_settings_get_verify_code_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="更换手机号"
        app:top_background="#FFFFFF"
        app:top_hasBackBtn="true"/>
    
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="@dimen/dp_44"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="#181818"/>
        <EditText
            android:id="@+id/mine_settings_phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text=""
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="#666666"
            android:textSize="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_10"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/mine_settings_phone_verify_code"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="@dimen/dp_44">
        <TextView
            android:id="@+id/verify_code_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textSize="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="#181818"/>
        <EditText
            android:id="@+id/mine_settings_get_verify_code_input"
            android:layout_width="@dimen/dp_96"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/verify_code_title"
            android:background="@null"
            android:hint="请输入验证码"
            android:maxLength="6"
            android:inputType="number"
            android:textColorHint="#666666"
            android:textSize="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/mine_settings_get_verify_code_btn"
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_15"
            android:focusable="true"
            android:clickable="true"
            android:textColor="#4591EC"
            android:textSize="@dimen/dp_14"
            android:text="获取验证码"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/mine_settings_get_verify_code_enter_btn"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/shape_red_5dp"
        android:textSize="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_60"
        android:text="更换手机号"
        android:textColor="#FFFFFF"/>
    
</LinearLayout>
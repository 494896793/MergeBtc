<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:KLineView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

   <ScrollView
       android:scrollbars="none"
       android:fillViewport="true"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <RelativeLayout
               android:paddingRight="@dimen/dp_15"
               android:paddingTop="@dimen/dp_7"
               android:paddingLeft="@dimen/dp_15"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/exchange_text"
                   android:text=""
                   android:textColor="#F14348"
                   android:textSize="@dimen/dp_26"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_marginBottom="@dimen/dp_40"
                   android:textSize="@dimen/dp_12"
                   android:textColor="@color/color_999999"
                   android:text=""
                   android:layout_marginTop="@dimen/dp_12"
                   android:layout_below="@id/exchange_text"
                   android:id="@+id/exchange_total"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_marginLeft="@dimen/dp_10"
                   android:id="@+id/exchange_person_text"
                   android:layout_marginTop="@dimen/dp_11"
                   android:layout_below="@id/exchange_text"
                   android:layout_toRightOf="@id/exchange_total"
                   android:text=""
                   android:textSize="@dimen/dp_14"
                   android:textColor="#F14348"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <LinearLayout
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:orientation="vertical"
                   android:layout_height="wrap_content">
                   <RelativeLayout
                       android:layout_marginBottom="@dimen/dp_10"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <TextView
                           android:layout_marginLeft="@dimen/dp_18"
                           android:layout_alignParentRight="true"
                           android:id="@+id/price_max"
                           android:textColor="@color/color_222222"
                           android:textSize="@dimen/dp_12"
                           android:minWidth="@dimen/dp_78"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:id="@+id/price_max_label"
                           android:layout_toLeftOf="@id/price_max"
                           android:textColor="@color/color_999999"
                           android:textSize="@dimen/dp_12"
                           android:text="24h最高"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />


                       <TextView
                           android:layout_marginTop="@dimen/dp_10"
                           android:layout_below="@id/price_max"
                           android:layout_alignParentRight="true"
                           android:id="@+id/price_min"
                           android:textColor="@color/color_222222"
                           android:textSize="@dimen/dp_12"
                           android:text=""
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:layout_alignTop="@id/price_min"
                           android:layout_alignLeft="@id/price_max_label"
                           android:id="@+id/price_min_label"
                           android:textColor="@color/color_999999"
                           android:textSize="@dimen/dp_12"
                           android:text="24h最低"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />


                       <TextView
                           android:layout_marginTop="@dimen/dp_10"
                           android:layout_below="@id/price_min_label"
                           android:layout_alignParentRight="true"
                           android:id="@+id/price_volume"
                           android:textColor="@color/color_222222"
                           android:textSize="@dimen/dp_12"
                           android:text=""
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:layout_alignTop="@id/price_volume"
                           android:layout_alignLeft="@id/price_max_label"
                           android:id="@+id/price_volume_label"
                           android:textColor="@color/color_999999"
                           android:textSize="@dimen/dp_12"
                           android:text="24h成交量"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />

                   </RelativeLayout>
               </LinearLayout>
           </RelativeLayout>

           <android.support.v7.widget.RecyclerView
               android:id="@+id/recycler"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

           </android.support.v7.widget.RecyclerView>

           <View
               android:background="@color/colorSearchBarForDark"
               android:layout_marginBottom="@dimen/dp_8"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1"/>

               <com.bochat.app.app.view.kline.KLineView
                   KLineView:klPriceIncreaseCol="#F14348"
                   KLineView:klPriceFallCol="#4FCC7A"
                   KLineView:klPriceMa5LineCol="#FFB75A"
                   KLineView:klPriceMa10LineCol="#CC4FC2"
                   KLineView:klPriceMa30LineCol="#4FCC7A"
                   KLineView:klVolumeTextCol="#FFB75A"
                   android:id="@+id/mKLineView"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_390" />

           <TextView
               android:layout_marginTop="@dimen/dp_25"
               android:layout_marginLeft="@dimen/dp_15"
               android:textSize="@dimen/dp_16"
               android:text="成交记录"
               android:textColor="@color/color_222222"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_marginLeft="@dimen/dp_15"
               android:layout_marginTop="@dimen/dp_13"
               android:layout_marginBottom="@dimen/dp_15"
               android:background="#FBFAFA"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_1" />
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <RelativeLayout
                   android:visibility="gone"
                   android:id="@+id/have_data_relative"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <RelativeLayout
                       android:id="@+id/bar_relative"
                       android:layout_width="match_parent"
                       android:orientation="horizontal"
                       android:layout_marginBottom="@dimen/dp_20"
                       android:layout_height="wrap_content">
                       <TextView
                           android:id="@+id/time_text"
                           android:layout_marginLeft="@dimen/dp_15"
                           android:text="时间"
                           android:textColor="@color/color_999999"
                           android:textSize="@dimen/dp_11"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:id="@+id/buy_or_sale_text"
                           android:layout_toRightOf="@id/time_text"
                           android:layout_marginLeft="@dimen/dp_58"
                           android:text="方向"
                           android:textSize="@dimen/dp_11"
                           android:textColor="@color/color_999999"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:id="@+id/price_text"
                           android:layout_toRightOf="@id/buy_or_sale_text"
                           android:layout_marginLeft="@dimen/dp_32"
                           tools:text="@string/history_title_price_fmt"
                           android:textSize="@dimen/dp_11"
                           android:textColor="@color/color_999999"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:layout_marginRight="@dimen/dp_15"
                           android:id="@+id/num_text"
                           android:layout_alignParentRight="true"
                           tools:text="@string/history_title_count_fmt"
                           android:textSize="@dimen/dp_11"
                           android:textColor="@color/color_999999"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                   </RelativeLayout>
                   <android.support.v7.widget.RecyclerView
                       android:layout_below="@id/bar_relative"
                       android:id="@+id/history_recycler"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                   </android.support.v7.widget.RecyclerView>
               </RelativeLayout>
               <RelativeLayout
                   android:id="@+id/no_data_relative"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_345">
                   <ImageView
                       android:id="@+id/nodata_img"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="@dimen/dp_55"
                       android:src="@mipmap/quotation_default"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:layout_marginTop="@dimen/dp_39"
                       android:layout_centerHorizontal="true"
                       android:layout_below="@id/nodata_img"
                       android:textSize="@dimen/dp_14"
                       android:text="暂无成交记录"
                       android:textColor="@color/color_999999"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </RelativeLayout>
           </RelativeLayout>

       </LinearLayout>
   </ScrollView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <com.bochat.app.app.view.BoChatTopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="申请加群"
        app:top_hasBackBtn="true">
    </com.bochat.app.app.view.BoChatTopBar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54">
        <TextView
            android:id="@+id/question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题"
            android:textColor="#999999"
            android:textSize="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_21"
            />
        <TextView
            android:id="@+id/join_group_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:textColor="#222222"
            android:layout_toRightOf="@id/question_text"
            android:text=""
            android:layout_marginTop="@dimen/dp_21"
            android:layout_marginLeft="@dimen/dp_17"/>
        <View
            android:layout_below="@id/question_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F7F7F7"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54">
        <TextView
            android:id="@+id/answer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="答案"
            android:textColor="#999999"
            android:textSize="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_21"
            />
        <EditText
            android:id="@+id/join_group_anwser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:textColor="#222222"
            android:layout_toRightOf="@id/answer_text"
            android:text=""
            android:background="@null"
            android:layout_marginTop="@dimen/dp_21"
            android:layout_marginLeft="@dimen/dp_17"/>
        <View
            android:layout_below="@id/join_group_anwser"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F7F7F7"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"/>

    </RelativeLayout>
    
    <Button
        android:id="@+id/join_group_apply"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/shape_button_5dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:text="加入群聊"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_50"
        />


</LinearLayout>
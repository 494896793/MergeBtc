<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_10"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/config_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_12"
        android:textColor="#0084ff"
        android:text="标题"/>
    
    <EditText
        android:id="@+id/config_content_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/config_content_btn"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_below="@id/config_content_title"
        android:textSize="@dimen/dp_13"
        android:textColor="#000000"
        android:enabled="false"
        android:text="内容"/>
    
    <Button
        android:id="@+id/config_content_btn"
        android:layout_width="@dimen/dp_50"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_13"
        android:text="编辑"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignBaseline="@id/config_content_input"
        android:background="@null"/>
    
</RelativeLayout>
import butterknife.BindView;

import static com.bochat.app.app.RouteExtra.ISGROUP;
import static com.bochat.app.app.RouteExtra.TARGET_ID;
import static com.bochat.app.app.RouteTable.DYNAMIC_MAIN_SEND_REDPACKET;


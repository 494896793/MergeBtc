<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="@dimen/dp_15"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/choose_bid_relative"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@drawable/shape_white_bg"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:text="币种选择"
            android:textColor="@color/color_181818"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_toLeftOf="@+id/bid_img"
            android:layout_centerVertical="true"
            android:id="@+id/bid_name"
            android:layout_marginRight="@dimen/dp_1"
            android:text=""
            android:textColor="@color/color_181818"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/bid_img"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/count_relative"
        android:background="@drawable/shape_white_bg"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:text="糖果数"
            android:textColor="@color/color_181818"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:inputType="numberDecimal"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/input_count_edit"
            android:background="@color/transparent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/bid_type"
            android:text=""
            android:hint="0"
            android:textColor="@color/color_181818"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/bid_type"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text=""
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_181818"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/edit_money_relative"
        android:background="@drawable/shape_white_bg"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:text="红包数"
            android:textColor="@color/color_181818"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:lines="1"
            android:inputType="number"
            android:background="@color/transparent"
            android:id="@+id/value_text"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text=""
            android:hint="0"
            android:textColor="@color/color_181818"
            android:textSize="@dimen/sp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_14"
            android:text="可用余额："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/amount_text"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_14"
            android:text="0.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <EditText
        android:id="@+id/content_edit"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:background="@drawable/shape_white_bg"
        android:textSize="@dimen/sp_16"
        android:gravity="top|left"
        android:hint="送利是，猪佩奇"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_above="@+id/send_bt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/bid_value_text"
                android:text="0.00"
                android:textSize="@dimen/sp_40"
                android:textColor="#222222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/bid_name_text"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="ETC"
                android:textColor="#222222"
                android:textSize="@dimen/sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/send_bt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_above="@+id/notice_text"
            android:textSize="@dimen/sp_16"
            android:text="塞零钱入利是袋"
            android:textColor="@color/base_bottom"
            android:background="@drawable/red_shape_bg"
            android:layout_width="@dimen/dp_158"
            android:gravity="center"
            android:layout_height="@dimen/dp_44" />
        <TextView
            android:id="@+id/notice_text"
            android:text="未领取的红包，将于24小时候发起退款"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_999999"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
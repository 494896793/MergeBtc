<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15">
            
            <ImageView
                android:id="@+id/mine_quick_exchange_user_icon"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"/>
            <TextView
                android:id="@+id/mine_quick_exchange_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:layout_marginLeft="@dimen/dp_10"
                style="@style/default_text"/>
            <TextView
                android:id="@+id/mine_quick_exchange_user_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15:46:15 2019/02/12"
                android:paddingRight="@dimen/dp_15"
                android:gravity="right"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#DFDFDF"/>
        <TextView
            android:id="@+id/mine_quick_exchange_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/default_text"
            android:text="发起了用USDT兑换BX的闪兑"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"/>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_19">
            <TextView
                android:id="@+id/mine_quick_exchange_offer_coin_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="兑换(USDT)"
                android:textColor="#4F5A7B"
                android:textSize="@dimen/dp_16"/>
            <TextView
                android:id="@+id/mine_quick_exchange_mine_coin_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_225"
                android:text="你需支付(BX)"
                android:textColor="#4F5A7B"
                android:textSize="@dimen/dp_16"/>
            <TextView
                android:id="@+id/mine_quick_exchange_offer_coin_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mine_quick_exchange_offer_coin_type"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="2.000000"
                android:layout_marginBottom="@dimen/dp_20"
                android:textColor="#181818"
                android:textSize="@dimen/dp_16"/>
            <TextView
                android:id="@+id/mine_quick_exchange_mine_coin_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mine_quick_exchange_offer_coin_type"
                android:layout_marginLeft="@dimen/dp_225"
                android:layout_marginTop="@dimen/dp_3"
                android:text="1.000000"
                android:textColor="#181818"
                android:textSize="@dimen/dp_16"/>
            
            <TextView
                android:id="@+id/mine_quick_exchange_rate"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_above="@id/mine_quick_exchange_rate_num"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="兑换汇率"
                android:textColor="#4F5A7B"
                android:textSize="@dimen/dp_16"/>
            
            <TextView
                android:visibility="gone"
                android:id="@+id/mine_quick_exchange_rate_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_3"
                android:text="1.000000BX ≈ 2.000000USDT"
                android:textColor="#181818"
                android:textSize="@dimen/dp_16"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/mine_wallet_token_property_main_layout"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/mine_wallet_token_property_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_125"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@mipmap/wallet_candy_bg"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15">


            <TextView
                android:id="@+id/mine_wallet_token_property_money_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:layout_marginLeft="@dimen/dp_27"
                android:layout_marginTop="@dimen/dp_48"
                android:textSize="@dimen/dp_14"
                android:textColor="#FFFFFF"
                android:layout_toLeftOf="@id/mine_wallet_token_property_money"/>

            <TextView
                android:id="@+id/mine_wallet_token_property_money"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_42"
                android:layout_marginTop="@dimen/dp_35"
                android:text="0.00000000"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dp_27"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="折合CNY"
                android:layout_below="@id/mine_wallet_token_property_money_first"
                android:textColor="#FFFFFF"
                android:alpha="0.5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/dp_11"
                />
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/dp_363"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_wallet_token_property_layout"

            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"

            android:layout_marginBottom="@dimen/dp_15"
            app:cardBackgroundColor="#FFFFFF"
            app:cardElevation="@dimen/dp_2"
            app:cardCornerRadius="@dimen/dp_2"
            >

            <LinearLayout
                android:id="@+id/mine_wallet_token_property_plugin_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:background="#FFFFFF"

                android:paddingBottom="@dimen/dp_13"
               >

                <LinearLayout
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/mine_wallet_token_gc_special_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="30dp"
                        android:layout_marginTop="@dimen/dp_17"
                        android:src="@mipmap/wallet_candy_expert"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginTop="@dimen/dp_14"
                        android:text="专用码"
                        android:textColor="#4F5A7B"
                        android:textSize="@dimen/dp_16"/>
                </LinearLayout>


                <LinearLayout
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/mine_wallet_token_receive"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="30dp"
                        android:layout_marginTop="@dimen/dp_17"
                        android:src="@mipmap/wallet_candy_receive"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginTop="@dimen/dp_14"
                        android:text="接收"
                        android:textColor="#4F5A7B"
                        android:textSize="@dimen/dp_16"/>
                </LinearLayout>

                <LinearLayout
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/mine_wallet_token_transfer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="30dp"
                        android:layout_marginTop="@dimen/dp_17"
                        android:src="@mipmap/wallet_candy_sendout"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginTop="@dimen/dp_14"
                        android:text="发送"
                        android:textColor="#4F5A7B"
                        android:textSize="@dimen/dp_16"/>
                </LinearLayout>

                <LinearLayout
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/mine_wallet_token_quick_exchange"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="30dp"
                        android:layout_marginTop="@dimen/dp_17"
                        android:src="@mipmap/wallet_candy_exchange"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginTop="@dimen/dp_14"
                        android:text="闪兑"
                        android:textColor="#4F5A7B"
                        android:textSize="@dimen/dp_16"/>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>
    
    

    <ListView
        android:id="@+id/mine_wallet_token_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_below="@id/mine_wallet_token_property_main_layout"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#FFFFFF">
    </ListView>

</RelativeLayout>
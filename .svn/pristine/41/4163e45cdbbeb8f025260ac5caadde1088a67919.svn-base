<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/privilege_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        tools:src="@mipmap/bg_privilege_banner_01"/>

    <LinearLayout
        android:id="@+id/privilege_item"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_24"
        android:paddingStart="@dimen/dp_24"
        android:paddingEnd="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_24">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/privilege_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold"
                tools:text="BoChat创世居民" />

            <TextView
                android:id="@+id/privilege_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_toEndOf="@id/privilege_name"
                android:background="@color/privilege_expire"
                android:padding="@dimen/dp_4"
                android:textColor="@color/white"
                android:textSize="10sp"
                tools:ignore="SmallSp"
                tools:text="已过期" />

            <Button
                android:id="@+id/privilege_btn"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_25"
                android:layout_alignParentEnd="true"
                android:background="@drawable/privilege_button_shape"
                android:gravity="center"
                android:text="去续费"
                android:textColor="@color/privilege_renew_expire_btn_text_color" />
        </RelativeLayout>
        <TextView
            android:id="@+id/privilege_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/privilege_term_of_validity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="有效期：永久有效" />
    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg_default">
    
    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/register_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_background="#F2F2F2"
        app:top_titleText="填写个人信息"/>
    
    <com.bochat.app.app.view.SpImageView
        android:id="@+id/register_icon_btn"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:src="@mipmap/home_default"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/register_top_bar"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginTop="@dimen/dp_30"/>

    <Button
        android:visibility="gone"
        android:id="@+id/register_icon_camera_btn"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_22"
        android:background="@mipmap/ic_register_icon_camera"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/register_top_bar"
        android:layout_marginTop="@dimen/dp_60"/>
    
    <TextView
        android:text="点击上传头像"
        android:id="@+id/head_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_icon_btn"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_centerHorizontal="true"
        android:textColor="#BABABA"
        android:textSize="@dimen/dp_12"
        />

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_46"
        android:id="@+id/register_id_layout"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/head_label"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/register_id_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:text="ID号"
            android:textColor="#333333"
            android:textSize="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            />
       <TextView
           android:id="@+id/register_id_text"
           android:layout_centerVertical="true"
           android:layout_toRightOf="@id/register_id_label"
           android:layout_marginLeft="@dimen/dp_30"
           android:text="52245934"
           android:textColor="@color/color_222222"
           android:textSize="@dimen/dp_16"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/register_nick_layout"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/register_id_layout"

        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/register_nick_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:text="昵称"
            android:textColor="#333333"
            android:textSize="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <EditText
            android:layout_toRightOf="@id/register_nick_label"
            android:layout_marginLeft="@dimen/dp_30"
            android:id="@+id/register_nick_input"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:maxLength="15"
            android:textSize="@dimen/dp_14"
            android:background="@null"
            android:hint="取个有意思的昵称吧~"/>
        <View
            android:layout_marginBottom="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_alignLeft="@id/register_nick_input"
            android:layout_alignParentBottom="true"
            android:background="#F7F7F7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/register_sex_layout"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/register_nick_layout"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/register_sex_women_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:text="性别"
            android:textColor="#333333"
            android:textSize="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <RadioGroup
            android:id="@+id/sex_radio_group"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/register_sex_women_label"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/sex_radio_man"
                android:checked="true"
                android:button="@null"
                android:drawableLeft="@drawable/sex_select"
                android:drawablePadding="@dimen/dp_10"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_46"
                android:text="男"
                android:layout_width="wrap_content"
                android:background="@null"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/sex_radio_woman"
                android:drawablePadding="@dimen/dp_10"
                android:button="@null"
                android:drawableLeft="@drawable/sex_select"
                android:textColor="@color/color_222222"
                android:textSize="@dimen/dp_16"
                android:background="@null"
                android:text="女"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
        <TextView
            android:visibility="gone"
            android:layout_toRightOf="@id/register_sex_women_label"
            android:id="@+id/register_sex_women"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:text="女"
            android:textColor="#181818"
            android:textSize="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_30"
            />
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:text="男"
            android:textColor="#181818"
            android:textSize="@dimen/dp_16"
            android:layout_centerVertical="true"
            />
        <android.support.v7.widget.SwitchCompat
            android:visibility="gone"
            android:id="@+id/register_sex_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/register_sex_women"
            android:layout_marginRight="@dimen/dp_10"
            android:theme="@style/MySwitch"
            />
        <View
            android:layout_marginBottom="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_alignLeft="@id/sex_radio_group"
            android:layout_alignParentBottom="true"
            android:background="#F7F7F7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/register_area_layout"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/register_sex_layout"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:clickable="true"
        >
        <TextView
            android:id="@+id/register_area_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:text="地区"
            android:textColor="#333333"
            android:textSize="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/register_area_btn"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@mipmap/ic_arrow_left_black"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_8"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_30"
            android:id="@+id/register_area_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/register_area_label"
            android:layout_marginRight="@dimen/dp_6"
            android:textColor="#222222"
            android:textSize="@dimen/dp_16"
            />
        <View
            android:layout_marginBottom="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_alignLeft="@id/register_area_text"
            android:layout_alignParentBottom="true"
            android:background="#F7F7F7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"/>
    </RelativeLayout>

    <Button
        android:id="@+id/register_enter_btn"
        android:layout_width="@dimen/dp_305"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@id/register_area_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_53"
        android:text="完成"
        android:textSize="@dimen/dp_17"
        android:textColor="#FFFFFF"
        android:background="@drawable/shape_login_btn"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/register_enter_btn"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/dp_12"
            android:textColor="@color/color_999999"
            android:text="我已阅读并同意"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/color_222222"
            android:textSize="@dimen/dp_12"
            android:text="《BoChat用户协议》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/color_222222"
            android:textSize="@dimen/dp_12"
            android:text="《风险提示协议》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</RelativeLayout>
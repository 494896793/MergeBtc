<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/add_friend_edit_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_background="#FFFFFF"
        app:top_hasBackBtn="true"
        app:top_titleText="添加朋友"/>
    <include 
        android:id="@+id/friend_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        layout="@layout/item_search_friend"
        android:layout_marginTop="@dimen/dp_10"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:text="填写验证信息"
        style="@style/default_text"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:background="#FFFFFF"
        />
    <EditText
        android:id="@+id/edit_request_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:hint=""
        android:textSize="@dimen/dp_14"
        android:gravity="top"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingTop="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_15"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/edit_request_enter_btn"
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_53"
            android:layout_centerHorizontal="true"
            android:text="发送"
            android:textSize="@dimen/dp_17"
            android:textColor="#FFFFFF"
            android:background="@drawable/shape_button_5dp"/>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_375"
    android:layout_height="@dimen/dp_60"
    android:background="#FFFFFF"
    android:focusable="false"
    android:clickable="false">

    <ImageView
        android:id="@+id/cv_group_manage_forbidden_member_icon"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"/>

    <TextView
        android:id="@+id/cv_group_manage_forbidden_member_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_22"
        android:text=""
        android:textColor="#000000"
        android:textSize="@dimen/dp_16"
        android:layout_toRightOf="@id/cv_group_manage_forbidden_member_icon"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_10"/>
    <TextView
        android:id="@+id/cv_group_manage_forbidden_member_signature"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_22"
        android:text="个性签名"
        android:textColor="#999999"
        android:textSize="@dimen/dp_14"
        android:layout_toRightOf="@id/cv_group_manage_forbidden_member_icon"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_below="@id/cv_group_manage_forbidden_member_name"
        />
    
    <Button
        android:id="@+id/cv_group_manage_forbidden_member_btn"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_30"
        android:background="@drawable/shape_cv_group_manage_forbidden_member_btn"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:text="解除禁言"
        android:textColor="#FE695E"
        android:textSize="@dimen/dp_14"/>
    
</RelativeLayout>
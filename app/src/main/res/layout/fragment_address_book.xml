<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F2F2F2">

    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/bochat_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="通讯录"
        app:top_background="#fff2f2f2"
        />
    
    <LinearLayout
        android:id="@+id/bochat_search_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_34"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_below="@id/bochat_topbar"
        android:layout_marginTop="@dimen/dp_11"
        android:background="@drawable/shape_search"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/bochat_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/ic_bochat_search"
            android:drawablePadding="@dimen/dp_6"
            android:text="@string/conversation_search_str"
            android:textAlignment="center"
            android:textColor="@color/colorFontColorForDark"
            android:textSize="@dimen/dp_14"/>
    </LinearLayout>
    
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tableayout"
        android:layout_below="@id/bochat_search_layout"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:tl_indicator_width="@dimen/dp_39"
        app:tl_indicator_color="#FE695E"
        app:tl_indicator_height="@dimen/dp_3"
        app:tl_indicator_corner_radius="@dimen/dp_2"
        app:tl_textSelectColor="#FE695E"
        app:tl_textsize="@dimen/dp_16"
        app:tl_textUnselectColor="#000000"
        app:tl_tab_space_equal="true"
        android:background="#FFFFFF"/>
    
    
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_below="@id/tableayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
    
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="#FFFFFF"
    android:orientation="vertical">
    
    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/mine_token_transfer_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_hasBackBtn="true"
        android:background="#FFFFFF"
        app:top_titleText="发送"/>
    
    <RelativeLayout
        android:id="@+id/mine_token_transfer_select_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:text="选择币种"
            android:textColor="#222222"
            android:textSize="@dimen/dp_16" />

        <RelativeLayout
            android:id="@+id/mine_token_transfer_select_coin_btn"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_150"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/mine_token_transfer_selected_coin"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/iv_arrow_right"
                android:text="请选择币种"
                android:textColor="#999999"
                android:textSize="@dimen/dp_16" />
            
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_arrow_right"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_13"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/ic_arrow_right_gray_7x13" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="#F7F7F7"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="#FFFFFF"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="接收人地址"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textColor="#222222"
            android:textSize="@dimen/dp_14" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="#FFFFFF"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/mine_token_transfer_address"
            android:layout_width="@dimen/dp_311"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:text=""
            android:textColor="#999999"
            android:maxLines="2"
            android:background="@null"
            android:hint="请扫描或输入地址"
            android:textSize="@dimen/dp_14" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_5"
                android:id="@+id/mine_token_transfer_address_scan"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_scan_black" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="#F7F7F7"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="#FFFFFF"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="发送数量"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textColor="#222222"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/mine_token_transfer_amount_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前可用：0.00000000"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_20"
        android:background="#FFFFFF">

        <EditText
            android:id="@+id/mine_token_transfer_amount_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_8" 
            android:maxLength="18"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:inputType="numberDecimal"
            android:background="@null"
            android:textColor="#222222"
            android:textSize="@dimen/dp_27"
            />
        
        <TextView
            android:id="@+id/mine_token_transfer_coin_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text="金币"
            android:textColor="#222222"
            android:textSize="@dimen/dp_14"
            android:layout_alignBaseline="@id/mine_token_transfer_amount_input"
            />
        
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="#F7F7F7"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mine_token_transfer_amount_real"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_16"
            android:text="实际到账：0.00000000"
            android:textSize="@dimen/dp_14"/>
        
        <TextView
            android:id="@+id/mine_token_transfer_amount_charge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_47"
            android:text="矿工费：0.00000000金币"
            android:textSize="@dimen/dp_12"
            android:textColor="#999999" />
        
        <TextView
            android:id="@+id/mine_token_transfer_amount_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_72"
            android:text="最小发送量：0.00000000金币"
            android:textSize="@dimen/dp_12"
            android:textColor="#999999" />
        
    </RelativeLayout>


    <Button
        android:id="@+id/mine_token_transfer_enter_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_43"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shape_button_5dp"
        android:text="确定"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dp_16" />

</LinearLayout>
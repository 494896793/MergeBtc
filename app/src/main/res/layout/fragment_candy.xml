<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

   <ScrollView
       android:scrollbars="none"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="wrap_content">
           <ImageView
               android:src="@mipmap/red_envelopes_money_bg"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_100" />

           <LinearLayout
               android:padding="@dimen/dp_15"
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="match_parent">
               <RelativeLayout
                   android:id="@+id/money_relative"
                   android:background="@drawable/shape_gray_bg"
                   android:padding="@dimen/dp_10"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_centerVertical="true"
                       android:text="红包金额"
                       android:textColor="@color/color_222222"
                       android:textSize="@dimen/sp_16"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:visibility="gone"
                       android:layout_toLeftOf="@+id/input_edit_money"
                       android:text="￥"
                       android:textSize="@dimen/sp_16"
                       android:textColor="@color/color_181818"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />

                   <EditText
                       android:gravity="right"
                       android:inputType="numberDecimal"
                       android:lines="1"
                       android:id="@+id/input_edit_money"
                       android:background="@color/transparent"
                       android:layout_centerVertical="true"
                       android:layout_alignParentRight="true"
                       android:text=""
                       android:hint="填写金额"
                       android:textColor="@color/color_181818"
                       android:textSize="@dimen/sp_16"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />

               </RelativeLayout>

               <RelativeLayout
                   android:layout_marginTop="@dimen/dp_10"
                   android:id="@+id/count_relative"
                   android:background="@drawable/shape_gray_bg"
                   android:padding="@dimen/dp_10"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_centerVertical="true"
                       android:text="红包个数"
                       android:textColor="@color/color_222222"
                       android:textSize="@dimen/sp_16"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <EditText
                       android:gravity="right"
                       android:inputType="number"
                       android:lines="1"
                       android:id="@+id/input_count_editer"
                       android:background="@color/transparent"
                       android:layout_centerVertical="true"
                       android:layout_alignParentRight="true"
                       android:text=""
                       android:hint="填写数量"
                       android:textColor="@color/color_181818"
                       android:textSize="@dimen/sp_16"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />

               </RelativeLayout>

               <LinearLayout
                   android:layout_marginTop="@dimen/dp_16"
                   android:orientation="horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <TextView
                       android:textColor="@color/color_999999"
                       android:textSize="@dimen/sp_14"
                       android:text="可用余额："
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/amount_text"
                       android:layout_marginLeft="@dimen/dp_1"
                       android:textColor="@color/flash_text"
                       android:textSize="@dimen/sp_14"
                       android:text="0.0"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:id="@+id/go_pay"
                       android:layout_marginLeft="@dimen/dp_15"
                       android:text="充值"
                       android:textColor="@color/color_222222"
                       android:textSize="@dimen/dp_14"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </LinearLayout>

               <EditText
                   android:id="@+id/title_edit"
                   android:layout_marginTop="@dimen/dp_16"
                   android:padding="@dimen/dp_15"
                   android:background="@drawable/shape_gray_bg"
                   android:textSize="@dimen/sp_16"
                   android:gravity="top|left"
                   android:hint="BX过百，别墅靠海！"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_70" />
               <CheckBox
                   android:id="@+id/redhall_checkbox"
                   android:checked="false"
                   android:layout_marginTop="@dimen/dp_14"
                   android:drawablePadding="@dimen/dp_6"
                   android:drawableLeft="@drawable/origin_checkbox"
                   android:text="同步发送到红包大厅，邀请更多好友进群"
                   android:button="@null"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <LinearLayout
                   android:layout_marginTop="@dimen/dp_31"
                   android:layout_gravity="center_horizontal"
                   android:layout_centerHorizontal="true"
                   android:layout_marginBottom="@dimen/dp_15"
                   android:orientation="horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <TextView
                       android:textColor="#222222"
                       android:textSize="@dimen/dp_14"
                       android:text="￥"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:layout_marginLeft="@dimen/dp_7"
                       android:id="@+id/value_text"
                       android:text="0.00"
                       android:textStyle="bold"
                       android:textSize="@dimen/dp_32"
                       android:textColor="#222222"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </LinearLayout>

               <TextView
                   android:id="@+id/send_bt"
                   android:layout_gravity="center_horizontal"
                   android:layout_marginBottom="@dimen/dp_51"
                   android:textSize="@dimen/sp_16"
                   android:text="塞零钱入利是袋"
                   android:textColor="@color/white"
                   android:background="@drawable/shape_origin_deep_bt"
                   android:layout_width="@dimen/dp_158"
                   android:gravity="center"
                   android:layout_height="@dimen/dp_44" />
           </LinearLayout>
       </LinearLayout>
   </ScrollView>
</LinearLayout>
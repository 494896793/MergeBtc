<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/share_popup_container"
        android:layout_width="@dimen/dp_355"
        android:layout_height="@dimen/dp_110"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_white_10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/share_popup_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_wechat"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="微信好友"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/dp_11" />

        <TextView
            android:id="@+id/share_popup_wechat_friends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_friends"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="微信朋友圈"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/dp_11" />

        <TextView
            android:id="@+id/share_popup_QQ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_qq"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="腾讯QQ"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/dp_11" />
    </LinearLayout>

    <TextView
        android:id="@+id/share_popup_cancel"
        android:layout_width="@dimen/dp_355"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@id/share_popup_container"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape_white_10dp"
        android:gravity="center"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="取消"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/dp_14" />
</RelativeLayout>
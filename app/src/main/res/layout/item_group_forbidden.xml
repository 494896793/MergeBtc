<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    >
    
    <ImageView
        android:id="@+id/group_forbidden_img"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="@dimen/dp_15"
        />

    <TextView
        android:id="@+id/group_forbidden_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#222222"
        android:textSize="@dimen/dp_16"
        android:text="Miss.Li"
        android:layout_toRightOf="@id/group_forbidden_img"
        android:layout_marginTop="@dimen/dp_17"
        android:layout_marginLeft="@dimen/dp_19"/>

    <TextView
        android:id="@+id/group_forbidden_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_13"
        android:textColor="#999999"
        android:text="ID:123456789"
        android:layout_toRightOf="@id/group_forbidden_img"
        android:layout_marginTop="@dimen/dp_42"
        android:layout_marginLeft="@dimen/dp_17"

        />

    <Button
        android:id="@+id/group_forbidden_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_26"
        android:text="解除禁言"
        android:textSize="@dimen/dp_12"
        android:textColor="#FFFFFF"

        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shape_group_forbidden_btn"
        />


</RelativeLayout>
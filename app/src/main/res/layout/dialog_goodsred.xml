<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@mipmap/candy_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_355">

        <TextView
            android:id="@+id/detail_text"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_30" />

        <TextView
            android:id="@+id/statu_label"
            android:visibility="invisible"
            android:layout_marginTop="@dimen/dp_40"
            android:text="成功领取"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_18"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/money_relative"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/statu_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginRight="@dimen/dp_8"
                android:id="@+id/money_label"
                android:text="666.00000000"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_27"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/money_unit"
                android:layout_alignBottom="@id/money_label"
                android:layout_toRightOf="@id/money_label"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/white"
                android:text="BTC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/money_tips"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_below="@id/money_relative"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_11"
            android:layout_width="wrap_content"
            android:text="— 已自动发放至钱包 —"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sure_bt"
            android:elevation="@dimen/dp_3"
            android:layout_marginBottom="@dimen/dp_42"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/white"
            android:background="@drawable/yellow_radio_bt_19"
            android:text="点击领取"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38" />
        <TextView
            android:id="@+id/notice_text"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_20"
            android:text="提示语提示语"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <Button
        android:id="@+id/coin_close"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_margin="@dimen/dp_15"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/home_popup_close" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">
        
        <RelativeLayout
            android:id="@+id/search_history_message_layout"
            android:layout_width="@dimen/dp_332"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="true">
            <ImageView
                android:id="@+id/search_history_message_icon"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/ic_login_logo"
                android:layout_marginBottom="@dimen/dp_6"
                />
            <TextView
                android:id="@+id/search_history_message_name"
                android:layout_toRightOf="@id/search_history_message_icon"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTC"
                style="@style/default_text"/>
            <TextView
                android:id="@+id/search_history_message_content"
                android:layout_width="@dimen/dp_254"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/search_history_message_icon"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_below="@id/search_history_message_name"
                android:textColor="#999999"
                android:textSize="@dimen/dp_14"
                android:text="我们的糖果全世界最棒，快来加入,我们的糖果全世界最棒，快来加入我们的糖果全世界最棒，快来加入我们的糖果全世界最棒，快来加入我们的糖果全世界最棒，快来加入"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_8"
                />
        </RelativeLayout>
       
        <TextView
            android:id="@+id/search_history_message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="@dimen/dp_12"
            android:text="昨天"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_11"/>
        
        <ImageView
            android:id="@+id/search_history_message_arrow"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/ic_arrow_right_gray24"
            android:layout_alignParentRight="true"
            android:layout_below="@id/search_history_message_date"
            android:layout_marginRight="@dimen/dp_12"
            android:focusable="true"
            android:clickable="true"
            />
        
    </RelativeLayout>
</RelativeLayout>
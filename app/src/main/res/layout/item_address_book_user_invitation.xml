<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/home_invitation_layout"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="#FFFFFFFF">
        <ImageView
            android:id="@+id/home_invitation"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/home_invitation"

            />

        <TextView
            android:id="@+id/address_book_add_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请好友"
            android:textColor="#FF222222"
            android:fontFamily="sans-serif-medium"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/home_invitation"
            android:textSize="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_17"/>


        <ImageView
            android:id="@+id/user_dark_notification_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_black_little"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"/>



    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/bochat_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="消息"
        app:top_hasExtBtn="true"
        app:top_hasExt2Btn="true"
        app:top_hasBackBtn="true"
        app:top_extButtonSrc="@mipmap/ic_bochat_scan"
        app:top_extButton2Src="@mipmap/ic_bochat_add"/>


    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tableayout"
        android:layout_below="@id/bochat_topbar"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        app:tl_indicator_width="@dimen/dp_39"
        app:tl_indicator_color="#FE695E"
        app:tl_indicator_height="@dimen/dp_3"
        app:tl_indicator_corner_radius="@dimen/dp_2"
        app:tl_textSelectColor="#FE695E"
        app:tl_textsize="@dimen/dp_16"
        app:tl_textUnselectColor="#000000"
        app:tl_tab_space_equal="true"
        android:background="#FFFFFF"/>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_below="@id/tableayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</RelativeLayout>
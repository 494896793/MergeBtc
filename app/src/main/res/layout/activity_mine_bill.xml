<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.bochat.app.app.view.BoChatTopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_hasBackBtn="true"
        app:top_titleText="我的账单"
        app:top_background="#FFFFFF"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="#FFFFFF"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/mine_bill_token_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="#181818"
            android:text="资产类型"/>
        
        <TextView
            android:id="@+id/mine_bill_token_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:layout_toRightOf="@id/mine_bill_token_type_title"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="零钱 "
            android:maxLines="1"
            android:layout_alignBaseline="@id/mine_bill_token_type_title"
            android:textColor="#0084FF"
            android:textSize="@dimen/dp_14"
            android:drawableRight="@mipmap/ic_bill_drop_down"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@id/mine_bill_charge_type_name"
            android:textColor="#222222"
            android:text="交易类型"/>
        
        <TextView
            android:id="@+id/mine_bill_charge_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:text="全部 "
            android:textColor="#0084FF"
            android:textSize="@dimen/dp_14"
            android:drawableRight="@mipmap/ic_bill_drop_down"
            android:layout_alignBaseline="@id/mine_bill_token_type_title"
            />
    </RelativeLayout>

    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/springView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/mine_bill_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"/>
    </com.liaoinstan.springview.widget.SpringView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/item_token_icon"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginBottom="@dimen/dp_17"/>
        
        <TextView
            android:id="@+id/item_token_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/item_token_icon"
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_16"
            android:includeFontPadding="false"
            android:text="发送"
            android:textColor="#222222"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/item_token_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_toRightOf="@id/item_token_icon"
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_below="@id/item_token_action"
            android:text="1月31日 08:30"
            android:textColor="#ff999999"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/item_token_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:includeFontPadding="false"
            android:text="-0.000004 BTC"
            android:textColor="#222222"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/item_token_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_below="@id/item_token_action"
            android:text=""
            android:textColor="#ff999999"
            android:textSize="@dimen/dp_12" />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_64"
            android:layout_below="@id/item_token_date"
            android:layout_marginTop="@dimen/dp_16"
            android:background="#F7F7F7"/>
    </RelativeLayout>
</RelativeLayout>
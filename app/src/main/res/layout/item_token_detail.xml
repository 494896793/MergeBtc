<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/mine_token_detail_transfer_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_125"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/bg_token_detail">

        <TextView
            android:id="@+id/mine_token_detail_transfer_detail_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="10.00000000"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp_27" />

        <TextView
            android:id="@+id/mine_token_detail_transfer_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_66"
            android:layout_marginLeft="@dimen/dp_41"
            android:layout_marginRight="@dimen/dp_65"
            android:drawableLeft="@mipmap/ic_code_white_40x40"
            android:drawablePadding="@dimen/dp_9"
            android:includeFontPadding="false"
            android:textColor="#80FFFFFF"
            android:text="ahfjdfkdkfncjvdkgvkfdkgkflglflgkzmckzkvdfsdgfdg" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="#FFFFFF">
        <RelativeLayout
            android:id="@+id/mine_token_detail_receive_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#222222"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dp_14"
                android:gravity="center_vertical"
                android:text="接收"
                android:drawableLeft="@mipmap/wallet_candy_receive"
                android:drawablePadding="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_50"/>
            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_26"
                android:background="#1A222222"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/mine_token_detail_transfer_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#222222"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_50"
                android:textSize="@dimen/dp_14"
                android:gravity="center_vertical"
                android:text="发送"
                android:drawableLeft="@mipmap/wallet_candy_sendout"
                android:drawablePadding="@dimen/dp_16"/>
        </RelativeLayout>
    </LinearLayout>



    <View
        android:id="@+id/div_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#FBFAFA"/>

    <RelativeLayout
        android:id="@+id/sub_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FBFAFA"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mine_token_detail_transfer_detail_icon"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/sub_amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mine_token_detail_transfer_detail_icon"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_13"
            android:includeFontPadding="false"
            android:text="锁定2.00000000 ETH"
            android:textSize="@dimen/dp_13"
            android:textColor="#222222"/>

        <TextView
            android:id="@+id/effective_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mine_token_detail_transfer_detail_icon"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_13"
            android:layout_below="@id/sub_amount_text"
            android:gravity="center"
            android:text="锁定时间：2019/6/15 - 2019/9/15"
            android:textSize="@dimen/dp_10"
            android:textColor="#222222"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/last_transaction_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最近交易记录"
            android:textColor="#222222"
            android:textSize="@dimen/dp_16"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_11"
            android:layout_centerVertical="true"
            />

        <LinearLayout
            android:id="@+id/to_purchase_usdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15">
            <ImageView

                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:src="@mipmap/purchase_bitmall_icon"
                />
            <TextView
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF0084FF"
                android:textSize="@dimen/dp_12"
                android:text="去购买USDT"/>
        </LinearLayout>



    </RelativeLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">
    
    <com.bochat.app.app.view.BoChatTopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="关于"
        app:top_hasBackBtn="true"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_73">
        <ImageView
            android:layout_width="@dimen/dp_77"
            android:layout_height="@dimen/dp_104"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_logo"
            android:scaleType="fitXY"
            />
    </RelativeLayout>
    
    <TextView
        android:id="@+id/version_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/dp_14"
        android:textColor="#999999"
        android:text="版本号: 1.0.0"
        android:layout_marginTop="@dimen/dp_16"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20">
        <Button
            android:id="@+id/check_update_btn"
            android:gravity="center"
            android:text="检查更新"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp_14"
            android:background="@drawable/shape_blue_4dp"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_35"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/about_us_net"
            android:layout_marginBottom="@dimen/dp_10">
            <TextView
                android:id="@+id/about_us_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="博讯软件技术（深圳）有限公司"
                android:layout_centerHorizontal="true"
                android:textColor="#999999"
                android:textSize="@dimen/dp_14"/>

            <TextView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_1"
                android:background="#999999"
                android:layout_toLeftOf="@id/about_us_name"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                />
            <TextView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_1"
                android:background="#999999"
                android:layout_toRightOf="@id/about_us_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                />
        </RelativeLayout>
        
        <TextView
            android:id="@+id/about_us_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_34"
            android:text="www.bochat.net"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textColor="#999999"
            android:textSize="@dimen/dp_14"
            />
    </RelativeLayout>

    
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_44">
    
    <RelativeLayout
        android:id="@+id/search_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_36"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_toLeftOf="@id/search_cancel_btn"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_search">

        <ImageView
            android:id="@+id/search_clear_ic"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/ic_search_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"/>
        <Button
            android:id="@+id/search_clear_btn"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_6"
            android:background="@mipmap/ic_close_gray"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            />
        <EditText
            android:id="@+id/search_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_22"
            android:layout_centerVertical="true"
            android:inputType="text"
            android:layout_toRightOf="@id/search_clear_ic"
            android:layout_toLeftOf="@id/search_clear_btn"
            android:background="@null"
            android:hint=""
            android:textColor="#000000"
            android:textSize="@dimen/dp_16"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/search_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_22"
        android:text="取消"
        android:focusable="true"
        android:clickable="true"
        android:padding="@dimen/dp_0"
        android:textColor="#4F5A7B"
        android:background="@null"
        android:textSize="@dimen/dp_16"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"/>



</RelativeLayout>
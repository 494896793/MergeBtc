<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F2F2F2">

    <RelativeLayout
        android:id="@+id/mine_wallet_token_property_main_layout"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/mine_wallet_token_property_layout"
            android:layout_width="@dimen/dp_363"
            android:layout_height="@dimen/dp_173"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@mipmap/ic_mine_token_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_20"
                android:text="我的Token资产"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dp_14"/>

            <TextView
                android:id="@+id/mine_wallet_token_property_money_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:layout_marginLeft="@dimen/dp_27"
                android:layout_marginTop="@dimen/dp_79"
                android:textSize="@dimen/dp_18"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/mine_wallet_token_property_money"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_42"
                android:layout_marginTop="@dimen/dp_59"
                android:layout_toRightOf="@id/mine_wallet_token_property_money_first"
                android:text="0.00000000"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dp_30"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="折合CNY"
                android:textSize="@dimen/dp_14"
                android:textColor="#FFFFFF"
                android:layout_below="@id/mine_wallet_token_property_money_first"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_25"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/mine_wallet_token_property_plugin_layout"
            android:layout_width="@dimen/dp_363"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_wallet_token_property_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="horizontal">

            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/mine_wallet_token_gc_special_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/dp_17"
                    android:src="@mipmap/ic_mine_token_private_code"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="专用码"
                    android:textColor="#4F5A7B"
                    android:textSize="@dimen/dp_16"/>
            </LinearLayout>


            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/mine_wallet_token_receive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/dp_17"
                    android:src="@mipmap/ic_mine_token_receive"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="接收"
                    android:textColor="#4F5A7B"
                    android:textSize="@dimen/dp_16"/>
            </LinearLayout>

            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/mine_wallet_token_transfer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/dp_17"
                    android:src="@mipmap/ic_mine_token_transfer"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="发送"
                    android:textColor="#4F5A7B"
                    android:textSize="@dimen/dp_16"/>
            </LinearLayout>

            <LinearLayout
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/mine_wallet_token_quick_exchange"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/dp_17"
                    android:src="@mipmap/ic_mine_token_flash"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="闪兑"
                    android:textColor="#4F5A7B"
                    android:textSize="@dimen/dp_16"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    
    

    <ListView
        android:id="@+id/mine_wallet_token_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mine_wallet_token_property_main_layout"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#FFFFFF">
    </ListView>

</RelativeLayout>
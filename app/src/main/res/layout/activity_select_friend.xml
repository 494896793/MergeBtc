<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">
    
    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/select_friend_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:top_hasBackBtn="true"
        app:top_hasExt3Btn="true"
        app:top_titleText="选择联系人"
        app:top_extButton3Text="确定"/>
    
    <LinearLayout
        android:id="@+id/select_friend_search_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_34"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/shape_search"
        android:layout_below="@id/select_friend_top_bar"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/bochat_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/ic_bochat_search"
            android:drawablePadding="@dimen/dp_6"
            android:text="@string/conversation_search_str"
            android:textAlignment="center"
            android:textColor="@color/colorFontColorForDark"
            android:textSize="@dimen/dp_14"/>
    </LinearLayout>
    
    <ListView
        android:id="@+id/select_friend_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/select_friend_search_layout"
        android:divider="@null"
        android:layout_marginTop="@dimen/dp_11"/>
    
</RelativeLayout>
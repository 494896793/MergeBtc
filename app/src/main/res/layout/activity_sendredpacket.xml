<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tl="http://schemas.android.com/tools">

    <com.bochat.app.app.view.BoChatTopBar
        android:visibility="gone"
        android:id="@+id/bochat_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="通讯录"
        app:top_background="@color/white"
        />
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65">

    </RelativeLayout>
    <com.flyco.tablayout.SlidingTabLayout
        android:background="@color/white"
        android:paddingTop="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:id="@+id/address_book_dark_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        tl:tl_textBold="SELECT"
        app:tl_textSelectColor="#222222"
        app:tl_textsize="@dimen/dp_14"
        app:tl_textUnselectColor="#222222"
        app:tl_indicator_color="#FF4B3E"
        app:tl_tab_space_equal="true"
        app:tl_indicator_height="@dimen/dp_2"
        app:tl_indicator_margin_bottom="@dimen/dp_5"
        app:tl_indicator_width="@dimen/dp_17"
        app:tl_indicator_corner_radius="@dimen/dp_2"
        />

    <android.support.design.widget.TabLayout
        android:visibility="gone"
        android:paddingTop="@dimen/dp_10"
        android:background="#ffffff"
        android:id="@+id/tableayout"
        android:layout_below="@id/bochat_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:layout_below="@id/address_book_dark_tab_layout"
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_17"
        android:id="@+id/back_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/ic_top_bar_back"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_30" />
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <com.bochat.app.app.view.BoChatTopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="添加银行卡"
        app:top_hasBackBtn="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/mine_bank_card_add_select"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_15"
                android:text="开户银行"
                android:layout_marginEnd="@dimen/dp_34"
                android:singleLine="true"
                android:textColor="#999999"
                style="@style/default_text"/>
            <ImageView
                android:id="@+id/mine_bank_card_icon"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:visibility="gone"
                android:layout_marginRight="@dimen/dp_10"/>
            <TextView
                android:id="@+id/bochat_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingEnd="3dp"
                android:singleLine="true"
                android:text="添加银行卡"
                android:textColor="#222222"
                android:textSize="@dimen/dp_16"/>

            <ImageView
                android:id="@+id/bochat_item_btn"
                android:layout_width="@dimen/dp_7"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginRight="@dimen/dp_8"
                android:src="@mipmap/ic_arrow_right_gray_7x13"
                android:visibility="visible" />
        </LinearLayout>

        <View
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F7F7F7"/>

        <com.bochat.app.app.view.BoChatItemView
            android:id="@+id/mine_bank_card_add_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_40"
            app:item_hasEditText="true"
            app:item_text="开户支行"
            app:item_text_color="#999999"
            app:item_hasRightBtn="false"
            app:item_editTextHint="请输入开户支行"
            app:item_editTextHintColor="#222222"
           />

        <View
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F7F7F7"/>
        <com.bochat.app.app.view.BoChatItemView
            android:id="@+id/mine_bank_card_add_name_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_40"
            app:item_hasEditText="true"
            app:item_text="持  卡  人"
            app:item_text_color="#999999"
            app:item_hasRightBtn="false"
            app:item_editTextHint=""/>

        <View
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F7F7F7"/>
        <com.bochat.app.app.view.BoChatItemView
            android:id="@+id/mine_bank_card_add_id_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_40"
            app:item_hasEditText="true"
            app:item_text="银行卡号"
            app:item_text_color="#999999"
            app:item_hasRightBtn="false"
            app:item_editTextHint="请输入银行卡号"
            app:item_editTextHintColor="#222222"
            app:item_editTextNumber="true"/>

        <View
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#F7F7F7"/>

    </LinearLayout>


    <Button
        android:id="@+id/mine_bank_card_add_enter_btn"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/shape_button_5dp"
        android:text="添加银行卡"
        android:textColor="#FFFFFF"
        android:layout_marginTop="@dimen/dp_81"
        android:textSize="@dimen/dp_17"
        />

</LinearLayout>
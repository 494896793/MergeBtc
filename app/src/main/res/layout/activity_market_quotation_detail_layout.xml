<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mk_nav_detail_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/list_app_top_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_20">

            <LinearLayout
                android:id="@+id/mk_nav_back_menu"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:src="@mipmap/ic_top_bar_back" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/mk_nav_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:button="@null"
                android:drawableEnd="@drawable/market_quotation_nav_selector"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="BX/ETH" />

            <LinearLayout
                android:id="@+id/mk_nav_collection_layout"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/mk_nav_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/market_quotation_nav_collection_selector"
                    android:gravity="center" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/market_quotation_detail_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white"
        app:tl_indicator_color="#ff0084ff"
        app:tl_indicator_corner_radius="@dimen/dp_2"
        app:tl_indicator_height="@dimen/dp_2"
        app:tl_indicator_width="@dimen/dp_14"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="#222222"
        app:tl_textUnselectColor="#666666"
        app:tl_textsize="@dimen/dp_14" />

    <android.support.v4.view.ViewPager
        android:id="@+id/market_quotation_detail_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
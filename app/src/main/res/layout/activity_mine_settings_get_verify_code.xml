<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_height="match_parent">

    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/mine_settings_get_verify_code_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_titleText="获取验证码"
        app:top_background="#FFFFFF"
        app:top_hasBackBtn="true"/>
    
    <EditText
        android:id="@+id/mine_settings_phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:singleLine="true"
        android:textColor="#BABABA"
        android:hint="请输入手机号码"
        android:inputType="number"
        android:maxLength="11"
        android:textSize="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_44"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#F7F7F7"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_11"
        />
    
    <RelativeLayout
        android:id="@+id/mine_settings_phone_verify_code"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="wrap_content">
        
        <EditText
            android:id="@+id/mine_settings_get_verify_code_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:singleLine="true"
            android:textColor="#BABABA"
            android:inputType="number"
            android:layout_toLeftOf="@id/mine_settings_get_verify_code_btn"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_33"
            android:hint="请输入验证码"
            android:maxLength="6"
            android:textSize="@dimen/dp_14"/>
        
        <Button
            android:id="@+id/mine_settings_get_verify_code_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentRight="true"
            android:background="@drawable/login_code_bt"
            android:text="获取验证码"
            android:textAllCaps="false"
            android:textColor="@color/color_222222"
            android:layout_marginRight="@dimen/dp_31"
            android:layout_marginTop="@dimen/dp_26"
            android:textSize="@dimen/dp_12" />
         
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#F7F7F7"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_11"
        />
    
    <Button
        android:id="@+id/mine_settings_get_verify_code_enter_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/shape_button_5dp"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:textSize="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_60"
        android:text="下一步"
        android:textColor="#FFFFFF"/>
    
</LinearLayout>
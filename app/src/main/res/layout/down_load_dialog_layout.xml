<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/edition_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/download_dk_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_20"
        tools:text="@string/update_descriptions"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_20" />

    <TextView
        android:id="@+id/download_dk_ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_48"
        android:lineHeight="0dp"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_15"
        tools:text="V1.0" />

    <TextView
        android:id="@+id/download_dk_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_37"
        android:layout_marginTop="@dimen/dp_152"
        android:layout_marginEnd="@dimen/dp_16"
        android:lineHeight="@dimen/dp_25"
        android:textColor="@color/letter_text"
        android:textSize="@dimen/dp_14"
        tools:text="1. 全面支持话题，给喜欢的小包子打分吧\n2. 支持查看更多精彩评论；\n3. 上传图片增加分类" />

    <LinearLayout
        android:id="@+id/download_dk_operation_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/upgrade_dialog_corner_bottom"
        android:orientation="horizontal">
        <Button
            android:id="@+id/download_dk_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/downloadCancelText"
            android:textColor="@color/letter_text"
            android:textSize="@dimen/dp_16"
            android:visibility="gone"
            android:background="@drawable/upgrade_dialog_left_button_selector"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/download_dk_upgrade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/newBlue"
            android:text="@string/downloadUpgradeText"
            android:background="@drawable/upgrade_dialog_right_button_selector"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>
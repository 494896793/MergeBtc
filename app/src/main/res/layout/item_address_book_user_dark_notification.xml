<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="#FFFFFF">
        
        <ImageView
            android:id="@+id/user_dark_notification"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/ic_friend_apply_notice"
            android:scaleType="fitXY"/>
        
        <TextView
            android:id="@+id/user_dark_notification_text"
            android:layout_toRightOf="@id/user_dark_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:textSize="@dimen/dp_16"
            android:text="新朋友通知"
            android:fontFamily="sans-serif-medium"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_17"/>
        
        <ImageView
            android:id="@+id/user_dark_notification_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_right_black_little"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"/>

        <TextView
            android:id="@+id/user_dark_notification_num"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toStartOf="@+id/user_dark_notification_arrow"
            android:layout_toLeftOf="@id/user_dark_notification_arrow"
            android:background = "@drawable/shape_red_pot"
            android:text=""
            android:textColor="#ffffffff"
            android:visibility="invisible"
            android:textSize="@dimen/dp_11"/>
        
    </RelativeLayout>
    
</RelativeLayout>
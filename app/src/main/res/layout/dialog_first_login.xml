<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="@dimen/dp_200"
        android:orientation="vertical"
        android:layout_height="@dimen/dp_232">
        <LinearLayout
            android:gravity="center_horizontal"
            android:background="@drawable/firstdialog_radiu_bg"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dp_22"
                android:text="欢迎加入BoChat"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/base_bottom"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginTop="@dimen/dp_20"
                android:src="@mipmap/first_login_dialog_img"
                android:layout_width="@dimen/dp_124"
                android:layout_height="@dimen/dp_82" />
            <TextView
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/base_bottom"
                android:textSize="@dimen/sp_14"
                android:text="恭喜获得 66 枚金币"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/enter_text"
            android:gravity="center"
            android:textSize="@dimen/sp_15"
            android:text="我知道了"
            android:background="@drawable/firstdialog_rado_bottom"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40" />
    </LinearLayout>
</LinearLayout>
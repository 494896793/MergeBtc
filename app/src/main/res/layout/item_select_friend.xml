<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_friend_layout"
    android:layout_width="@dimen/dp_375"
    android:layout_height="@dimen/dp_50"
    android:background="#FFFFFF">
    <ImageView
        android:id="@+id/select_friend_btn"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:background="@mipmap/ic_select_friend_btn"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"/>
    
    <FrameLayout
        android:id="@+id/select_friend_icon_layout"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/select_friend_btn"
        android:layout_marginLeft="@dimen/dp_15">
        <com.bochat.app.app.view.SpImageView
            android:id="@+id/select_friend_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    
    <TextView
        android:id="@+id/select_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/select_friend_icon_layout"
        android:layout_marginLeft="@dimen/dp_15"
        style="@style/default_text"
        android:layout_centerVertical="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_toRightOf="@id/select_friend_btn"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="#DFDFDF"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
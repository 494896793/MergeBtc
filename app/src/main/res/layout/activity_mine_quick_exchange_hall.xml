<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.bochat.app.app.view.BoChatTopBar
        android:id="@+id/quick_exchange_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:top_hasBackBtn="true"
        android:background="#F2F2F2"
        app:top_hasExt3Btn="true"
            app:top_extButton3Text="我的订单"
        app:top_titleText="闪兑大厅"/>

    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/springView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/quick_exchange_enter"
        android:layout_below="@id/quick_exchange_top_bar"
        android:layout_marginBottom="@dimen/dp_30">
        <ListView
            android:id="@+id/quick_exchange_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
           >
        </ListView>
    </com.liaoinstan.springview.widget.SpringView>
    
    <Button
        android:id="@+id/quick_exchange_enter"
        android:layout_width="@dimen/dp_345"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/shape_login_btn"
        android:text="发起闪兑"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dp_17" />

</RelativeLayout>
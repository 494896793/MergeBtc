<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/shape_mine_code_pay">


        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_left_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发送"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp_18" />


    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_63"
            android:background="@drawable/shape_mine_code_pay" />

        <ImageView
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_169"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_162"
            android:src="@mipmap/ic_picture_in_chat" />

        <RelativeLayout
            android:layout_width="@dimen/dp_345"
            android:layout_height="@dimen/dp_300"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_39"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_mine_code_pay_bg">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_136"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_129"
                android:text="倔强的蜗牛"
                android:textColor="#ff181818"
                android:textSize="@dimen/dp_16" />

            <View
                android:layout_width="@dimen/dp_345"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_71"
                android:background="#DFDFDF" />

            <RelativeLayout
                android:layout_width="@dimen/dp_345"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_71"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="发送币种"
                    android:textColor="#181818"
                    android:textSize="@dimen/dp_16" />

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/tv_b"
                    android:src="@mipmap/ic_mine_gold" />

                <TextView
                    android:id="@+id/tv_b"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_22"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="金币"
                    android:textColor="#181818"
                    android:textSize="@dimen/dp_16" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_345"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_130"
                android:background="#DFDFDF" />

            <RelativeLayout
                android:layout_width="@dimen/dp_345"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_130"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="发送数量"
                    android:textColor="#181818"
                    android:textSize="@dimen/dp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="0.000000"
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_16" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_345"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_190"
                android:background="#DFDFDF" />

            <Button
                android:layout_width="@dimen/dp_250"
                android:layout_height="@dimen/dp_44"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_223"
                android:layout_marginRight="@dimen/dp_48"
                android:background="@drawable/shape_login_btn"
                android:text="发送"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dp_17" />

        </RelativeLayout>

    </FrameLayout>

</FrameLayout>